<% level = defined?(level) && level || 1 %>
<% if level == 1 %>
   <% ancestors=[] %>
   <% data_scope = filters[:top_scope] %>
   <div class='custom_filter'>
<% end %>

<% filter_group = ancestors.join('-')%>
<br class="hide custom_level_<%=level%> Filter-<%=filter_group%>"/>


<div class="btn btn-group  hide custom_level_<%=level%> Filter-<%=filter_group%>" data-scope="<%=data_scope%>"  role='group'>
  <% filters[data_scope].each do |filter| %>
    <div class="btn btn-default" data-key="<%=filter[0]%>"
    id="Tab:<%=filter_group.present? ? [filter_group,filter[0]].join('-') : filter[0] %>">
      <%=filter[1] + level.to_s%> 
    </div>
  <% end %>
</div>



<% filters[data_scope].each do |filter| %>
  <% new_data_scope = filter[2] %>
  <% if new_data_scope %>
    <%= render partial: '/datatables/shared/filter',
       locals: {filters: filters, level: level+1, ancestors: ancestors + [filter[0]], data_scope: new_data_scope} %>
    <%end%>
<% end %>

<% if level==1 %>
  </div>
  <script>
     DT.filters()
  </script>
<% end %>