footer.footer-wrapper#footer-uic
  .container
    .col-md-6
      .row
        = copyright_notice
    .col-md-6
      .row
        ul.list-unstyled.list-inline.pull-right
          li 
            a.call-customer-service href="tel:#{contact_center_short_number}"
              span
                i.fas.fa-phone.fa-lg
                | &nbsp; 
                = "#{Settings.contact_center.short_number} / TTY: #{Settings.contact_center.tty_number}"
          li
            = mail_to contact_center_email_address, target: '_blank' do
              span
                i.fas.fa-envelope.fa-lg
                | &nbsp;
                = Settings.contact_center.email_address
          li 
            = link_to site_faqs_url, target: '_blank' do
              i.fas.fa-question.fa-lg
              | &nbsp; 
              | GET HELP
