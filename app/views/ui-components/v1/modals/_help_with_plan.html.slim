      .modal-body style='height: 650px; overflow-y: scroll'
        #help_list style='font-size: 140%; margin: 140px 100px 0px'
          b = l10n("insured.plan_shoppings.help_me_sign_up_options")
          br
          br
          ul
            li = link_to l10n("insured.plan_shoppings.help_from_a_broker"), benefit_sponsors.staff_index_profiles_broker_agencies_broker_agency_profiles_path, remote: true
