              li = link_to l10n("insured.plan_shoppings.help_from_an_inperson_assister"), main_app.assister_index_exchanges_hbx_profiles_path, remote: true
            - if EnrollRegistry.feature_enabled?(:contact_customer_service_representative)
              li.name_search_only#CSR
                a = l10n("insured.plan_shoppings.help_from_a_customer_service_representative")
              li.name_search_only#CAC
                a = l10n("insured.plan_shoppings.help_from_a_certified_applicant_counselor")
        #help_search.help_reset
          h4 = l10n("search_by_name")
          label for="help_first_name" = l10n('first_name')
          | :
          br
          input#help_first_name type="text"
          br
          label for="help_last_name" = l10n('last_name')
          | :
          br
          input#help_last_name type="text"
          button.btn.btn-primary#search_for_plan_shopping_help = l10n("search_for_help")
          br
          unless @bs4
            h4#help_status
          .hide#help_requestor = @person.try(:id)
          .hide#help_requestor_email = current_user.oim_id
          .hide#help_type
