fieldset
  legend = l10n("personal_information")

  .row
    .col-md-4.mb-2
      label for="inputFirstname"   #{l10n('first_name')} *
      = f.text_field :first_name, placeholder:'First Name', required:'true', id:'inputFirstname', class:'form-control', readonly: true
      .invalid-feedback

        = l10n("invalid_first_name")

    .col-md-4.mb-2
      label for="inputLastname"  #{l10n('last_name')} *
      = f.text_field :last_name, placeholder:'Last Name', required:'true', id:'inputLastname', class:'form-control', readonly: true
      .invalid-feedback

        = l10n("invalid_last_name")

    .col-md-4.mb-2
      label for="inputDOB"  #{l10n('date_of_birth')} *
      = f.text_field :dob, placeholder: 'MM/DD/YYYY', required: 'true', id: 'inputStaffDOB', class:'form-control', readonly: true
      .invalid-feedback

        = l10n("invalid_dob")

    .col-md-4.mb-2
      label for="inputEmail"  #{l10n('email')} *
      = f.email_field :email, placeholder:'Email', required:'true', id:'inputEmail', class:'form-control'
      .invalid-feedback

        = l10n("invalid_email")

    = f.hidden_field :person_id, value: f.object.person_id
    = f.hidden_field :profile_id, value: nil