<h4 class="mb-2"><%= l10n('broker_agency_note') %></h4>

<div class="row mb-3">
  <%= f.hidden_field :entity_kind, value: "s_corporation" %>
  
  <div class="col-md-6">
    <label for="inputLegalName">Legal Name *</label>
    <%= f.text_field :legal_name, placeholder: 'Agency Legal Name', required: true, id: 'validationCustomLegalName', class: 'form-control' %>
    <div class="invalid-feedback">
      Please provide a legal name.
    </div>
  </div>

  <div class="col-md-6">
    <label for="inputDBA">DBA</label>
    <%= f.text_field :dba, placeholder: 'Doing Business As', id: 'validationCustomdba', class: 'form-control' %>
  </div>
</div>