
<legend class='beta bold mb-3'><%= l10n("personal_information") %></legend>
<div class="row mb-4">
  <div class="col-md-3 mb-2">
    <%= f.label :first_name, l10n("first_name"), class: "required" %>
    <%= f.text_field :first_name, placeholder: l10n('first_name'), required: 'true', class: 'form-control' %>
    <div class="invalid-feedback">
      <%= l10n("invalid_first_name") %>
    </div>
  </div>
  <div class="col-md-3 mb-2">
    <%= f.label :last_name, l10n("last_name"), class: "required" %>
    <%= f.text_field :last_name, placeholder: l10n('last_name'), required: 'true', class: 'form-control' %>
    <div class="invalid-feedback">
      <%= l10n("invalid_last_name") %>
    </div>
  </div>
  <div class="col-md-3 mb-2">
    <%= f.label :email, l10n("email_address"), class: "required" %>
    <%= f.email_field :email, placeholder: l10n('placeholder_email'), required: 'true', class: 'form-control' %>
    <div class="invalid-feedback">
      <%= l10n("invalid_email") %>
    </div>
  </div>
  <div class="col-md-3 mb-2">
    <%= f.label :dob, l10n("broker_agencies.dob"), class: "required" %>
    <%= f.date_field :dob,
      placeholder: l10n('dob_format'),
      min: 110.years.ago,
      max: 16.years.ago.beginning_of_month,
      data: {input:"", invalid_dob_title: l10n('broker_agencies.invalid_dob_title'), invalid_dob_body: l10n('broker_agencies.invalid_dob_body'), invalid_dob_after: l10n("broker_agencies.invalid_dob_after", date: 16.years.ago.beginning_of_month.strftime('%m/%d/%Y')), invalid_dob_before: l10n("broker_agencies.invalid_dob_before", date: 110.years.ago.strftime('%m/%d/%Y'))},
      required: true,
      onblur: 'validDob(this)',
      onkeydown: 'storeDateInput(event)'
    %>
    <div class="invalid-feedback">
      <%= l10n("invalid_dob") %>
    </div>
  </div>
</div>
