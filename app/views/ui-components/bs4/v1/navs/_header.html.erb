<hidden id='dchbx_enroll_date_of_record' class='d-none'><%= TimeKeeper.date_of_record.iso8601 %></hidden>
<header class="bg-white navbar-main py-2 <%= 'pre_prod_nav_color' if ENV['ENROLL_REVIEW_ENVIRONMENT'] == true %>">

  <nav class="navbar navbar-expand-lg container py-1">
    <a class="navbar-brand border-right-0 mr-0" href="#">
      <%= image_pack_tag "logo_#{ENV['CLIENT'] || 'ic'}.svg" %>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-dynamic-collapse" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon">!!!!</span>
    </button>
    <div class="collapse navbar-collapse" id="nav-dynamic-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-divider"></li>
        <li class="nav-item d-flex flex-column">
          <span>Maine's Health Insurance Marketplace</span>
          <span>Individual & Family</span>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item d-flex flex-column">
          <span><%= l10n("layout.header.customer_service")%></span>
          <a><%= "#{EnrollRegistry[:enroll_app].settings(:contact_center_short_number).item} / TTY: #{EnrollRegistry[:enroll_app].setting(:contact_center_tty_number).item}" %></a>
        </li>
        <li class="nav-divider"></li>
        <li class="nav-item d-flex flex-column">
          <span><%= l10n("layout.header.user_and_id", name: user_first_name_last_name_and_suffix, id: current_user.try(:person).try(:hbx_id)[0,8]) %></span>
          <span>
            <%= render partial: "shared/my_portal_links" %>
            <span>|</span>
            <%= link_to 'Help', 'https://dchealthlink.com/help', target: '_blank', rel: "noopener noreferrer" %>
            <span>|</span>
            <%= link_to 'Logout', main_app.destroy_user_session_path, method: 'delete' %>
          </span>
        </li>
      </ul>
    </div>
  </nav>

</header>


<style>
  header.navbar-main {
    font-size: 14px;

    .nav-divider {
      background-color: #ccc;
      width: 1px ;
      margin: -.75rem 0.5rem;
    }
  }
</style>
