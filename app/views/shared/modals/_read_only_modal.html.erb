<% if body.is_a?(Array) && subtitle.is_a?(Array) %>
  <div class="modal fade read-only-modal" id="read_only_modal_<%= modal_id %>" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">
            <%= sanitize_html(header_icon) %>
            <span class="pl-2"><%= title %></span>
          </h3>
          <button aria-label="Close" class="close ml-4" data-dismiss="modal" type="button">
              <span aria-hidden="true">&times;</span>
          </button> 
        </div>
        <% body.zip(subtitle).each do |(body_item, subtitle_item)| %>
          <div class="modal-body">
            <% unless subtitle_item.nil? %>
              <strong><%= subtitle_item %></strong>
            <% end %>
            <p>
              <%= body_item %>
            </p>
          </div>
        <% end %>
        <div class="modal-footer">
          <%= link_to 'Close', '', :class => 'btn btn-default', data: { dismiss: "modal"} %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="modal fade read-only-modal" id="read_only_modal_<%= modal_id %>" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="vertically-aligned-row">
            <h3 class="modal-title">
              <%= sanitize_html(header_icon) %>&nbsp;<%= title %>
            </h3>
            <button aria-label="Close" class="close" data-dismiss="modal" type="button">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
        <div class="modal-body">
          <p>
            <%= body %>
          </p>
        </div>
        <div class="modal-footer">
          <%= link_to 'Close', '', :class => 'btn btn-default', data: { dismiss: "modal"} %>
        </div>
      </div>
    </div>
  </div>
<% end %>