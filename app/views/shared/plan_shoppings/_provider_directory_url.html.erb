<% if offers_nationwide_plans? %>
  <% if qhps.compact.map(&:plan).compact.map(&:nationwide).compact.uniq.include?(true) %>
    <tr>
      <td class="th"></td>
      <% qhps.each do |qhp|%>
        <th colspan="2">
          <% if qhp.plan.nationwide %>
            <%= h(link_to l10n("plans.comparison_table.dd"), qhp.plan.provider_directory_url, target: "_blank", rel: "noopener noreferrer") %>
          <% end %>
        </th>
      <% end %>
    </tr>
  <% end %>
<% else%>
  <tr>
    <td class="th"></td>
    <% qhps.each do |qhp|%>
      <th colspan="2">
        <%= h(link_to "DOCTOR DIRECTORY", qhp.plan.provider_directory_url, target: "_blank", rel: "noopener noreferrer") %>
      </th>
    <% end %>
  </tr>
<% end %>
