<div class="col-xs-12 bottom-pd" id='inbox-messages'>
  <div class="row no_margin">
    <h3 class="title-inline">Messages</h3>
  </div>

  <div class="row no_margin">
    <div id="inbox_form" class="col-lg-2 col-md-3 col-sm-4 col-xs-12 no-pd">
      <ul class="list-group">
        <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox'), remote: true) do%>
        <li class="list-group-item">Inbox <span class="badge message-badge pull-right"><%= @employer_profile.inbox.unread_messages.size %></span></li>
        <% end %>
        <%- if @sent_box == true %>
          <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'Sent'), remote: true) do%>
            <li class="list-group-item">Sent</li>
          <% end %>
        <% end %>
        <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, tab: 'inbox', folder: 'Deleted'), remote: true) do%>
          <li class="list-group-item">Deleted</li>
        <% end %>
      </ul>
    </div>
   <%- @folder = (@folder||'Inbox').capitalize %>
    <div class="col-lg-10 col-md-9 col-sm-8 col-xs-12 table-responsive" id="message_list_form">
      <table class="table table-hover">
        <thead>
          <tr>
            <th> <%= @folder %>: FROM</th>
            <th> Date  </th>
            <th>Subject</th>
          </tr>
        </thead>

        <tbody>
          <%- if provider.try(:inbox).try(:messages) %>
          <%= render partial: "shared/inboxes/individual_message", :collection => provider.inbox.messages.select{|m| @folder.capitalize == (m.folder.try(:capitalize) || 'Inbox') }, :as => :message, locals: {provider: provider} %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div id="show_message_form"></div>
  </div>
</div>
