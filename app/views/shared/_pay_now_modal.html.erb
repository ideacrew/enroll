<% carrier = hbx_enrollment.product.carrier_profile.legal_name %>
<% kaiser_first_payment = carrier == "Kaiser" && past_effective_on?(hbx_enrollment) %>
<% kaiser_plan_shopping = carrier == "Kaiser" && source == "Plan Shopping"  %>
<% url = kaiser_first_payment || kaiser_plan_shopping ? @kp_pay_now_url : carrier_url(carrier) %>
<% carrier_key = carrier == "Kaiser" ? carrier.downcase! : "other" %>
<div class="modal fade" tabindex="-1" role="dialog" id="payNowModal<%= hbx_enrollment.hbx_id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center text-uppercase"></h4>
      </div>
      <div class="modal-body">
        <p>
          <%= l10n("plans.#{carrier_key}.pay_now.redirection_message", site_short_name: Settings.site.short_name, carrier_name: carrier) %><br/>
          <ul>
            <li><%= l10n("plans.#{carrier_key}.pay_now.link_info")%></li>
            <li><%= l10n("plans.#{carrier_key}.pay_now.processing", carrier_name: carrier)%></li>
            <li><%= l10n("plans.#{carrier_key}.pay_now.collecting_info", carrier_name: carrier)%></li>
            <li><%= l10n("plans.#{carrier_key}.pay_now.exchange_disclaimer_for_auth") %></li>
            <br/>
          </ul>
          <%= l10n("plans.#{carrier_key}.pay_now.exchange_disclaimer", carrier_name: carrier) %>
        </p>
      </div>
      <%= hidden_field_tag 'source', source %>
      <div class="modal-footer">
        <form action=<%= url %> method="<%= kaiser_first_payment || kaiser_plan_shopping ? 'post' : 'get' %>" target="_blank" id="pay_now_form">
          <% if kaiser_first_payment || kaiser_plan_shopping %>
            <input type="hidden" name="SAMLResponse" value="response" id="sp"/>
            <input type="hidden" name="RelayState" value=<%= @kp_relay_state %>/>
          <% end %>
          <button type="submit" class="btn btn-primary pull-right sp interaction-click-control-print-purchase-confirmation" id="pay-now" value="<%= hbx_enrollment.hbx_id %>">
            <%= l10n("leave_dc_health_link")%>
          </button>
        </form>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><%= l10n("go_back")%></button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
