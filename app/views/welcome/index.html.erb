<div class="jumbotron">

  <h1>Welcome to <%= Settings.site.short_name %></h1>
  <h2><%= Settings.site.byline %></h2>

  <% if user_signed_in? %>
    <p>Signed in as: <%= current_user.oim_id %> <%= link_to('Sign out', destroy_user_session_path, class: "btn btn-primary", :method => :delete) %></p>
  <% end %>

  <%= link_to "Employee Portal", privacy_insured_employee_index_path, class: "btn btn-default" %>
  <% if individual_market_is_enabled? %>
    <%= link_to "Consumer/Family Portal", privacy_insured_consumer_role_index_path(uqhp: true), class: "btn btn-default" %>
    <%= link_to "Assisted Consumer/Family Portal", privacy_insured_consumer_role_index_path(aqhp: true), class: "btn btn-default" %>
  <% end %>
  <%= link_to "Returning User", family_account_path, class: "btn btn-default" %>
  <%= link_to "Employer Portal", new_employers_employer_profile_path, class: "btn btn-default" %>
  <%= link_to "HBX Portal", exchanges_hbx_profiles_root_path, class: "btn btn-default" %>
  <% if !user_signed_in? %>
    <%= link_to "Broker Registration", broker_registration_path, class: "btn btn-default" %>
    <%= link_to "General Agency Registration", general_agency_registration_path, class: "btn btn-default" if general_agency_enabled? %>
  <% end %>
</div>
