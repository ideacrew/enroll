<table class="total_table address custom-address" border="0">
  <tbody>
  <tr><td><br><br></td></tr>
    <tr>
      <td class="fssize health-connector-address "><%= notice.primary_fullname %></td>
    </tr>
    <% if notice.shop? %>
    <tr>
      <td class="fssize1 health-connector-address"><%= notice.employer_name %></td>
    </tr>
    <% end %>
    <tr>
       <td class="fssize1 health-connector-address"><%= notice.primary_address.street_1 %> <td align="right" style="padding-right: 15px">Notice No. <%= notice.try(:mpi_indicator) || "SHOP_M001" %></td></td>
    </tr>
    <% if notice.primary_address.street_2.present? %>
    <tr>
      <td class="fssize1 health-connector-address"><%= notice.primary_address.street_2 %></td>
    </tr>
    <% end %>
    <tr>
    <td class="fssize1 health-connector-address"><%= notice.primary_address.city %> <%= notice.primary_address.state %> <%= notice.primary_address.zip %></td>
    </tr>
  </tbody>
</table>