<html>
<head>
  <title><%= EnrollRegistry[:enroll_app].setting(:short_name).item %> Confirmation</title>
  <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <meta content="IE=edge" http-equiv="X-UA-Compatible" />
  <meta content="telephone=no" name="format-detection" />

  <style type="text/css">

    @font-face {
      font-family: 'Open Sans';
      font-style: normal;
      font-weight: 300;
    }

    body {
      width:100%!important;
      -webkit-text-size-adjust:100%;
      -ms-text-size-adjust:100%;
      margin:0;
      padding:0;
      mso-line-height-rule:exactly
      font-size:10px;
      color: <%= EnrollRegistry[:ivl_notice_footer].settings(:color).item %>;
      font-family: "Open Sans", sans-serif;
      margin-top: 14px;
    }

    table td {
      border-collapse:collapse;
      font-size:8px;
      font-family: "Open Sans", sans-serif;
    }
    table {
      border-collapse: collapse;
    }
    table td {
      border-collapse: collapse;
    }
  </style>

</head>

<body onload="subst()">
  <% if notice.is_a?(Notifier::NoticeKind) %>
    <br />
  <% end %>
  <table class="footer-section" style="color: <%= EnrollRegistry[:ivl_notice_footer].settings(:color).item %>;" width="100%" border="0">
    <tr>
      <td align="center">_____________________________________________________________________________________________________________________</td>
    </tr>
    <tr>
      <td style="padding:3px 10px; font-size:8px;" align="center">
      <% phone = notice.is_a?(Notifier::NoticeKind) ?  contact_center_number_for_display : notice.hbe.phone %>
      <%= l10n("notices.shared.questions_call", site_short_name: site_short_name, phone: phone, website: site_website_name.downcase) %>
      </td>
    </tr>
  </table>
</body>
</html>
