<div style="display:block; page-break-inside: avoid;">
  <table class="total_table" border="0" style="margin-top: <%= top_margin if defined? top_margin %>;">
    <tbody>
      <% if heading.present? %>
      <tr>
        <td style="font-size: 14px;"><%= sanitize_html(heading) %></td>
      </tr>
      <% end %>
      <% if sub_heading.present? %>
      <tr>
        <td style="color:black;"><%= sanitize_html(sub_heading) %></td>
      </tr>
      <% end %>
      <% contents.each do |para| %>
      <tr>
        <td style="padding-top: 8px; padding-bottom: 6px" ><%= sanitize_html(para) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
