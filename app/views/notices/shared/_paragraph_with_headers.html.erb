<div style="display:block; page-break-inside: avoid;">
  <table class="total_table" border="0" style="margin-top: <%= top_margin if defined? top_margin %>;">
    <tbody>
      <% if heading.present? %>
        <tr>
          <td style="font-size: 14px; padding-bottom: 8px;"><%= sanitize_html(heading) %></td>
        </tr>
      <% end %>
      <% if sub_heading.present? %>
        <tr>
          <td style="padding-bottom: 5px;"><%= sanitize_html(sub_heading) %></td>
        </tr>
      <% end %>
      <% if contents.present? %>
        <% contents.each do |para| %>
          <tr>
            <td style="padding-bottom: <%= bottom_margin if defined? bottom_margin %>;"><%= sanitize_html(para) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
