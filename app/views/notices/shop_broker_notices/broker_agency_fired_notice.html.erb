<%= render partial: 'notices/shared/cover_page', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo_and_address_shop' %>
<%= render partial: "notices/shared/shop_address", :locals => {notice: notice} %>
<%= render partial: "notices/shared/date", :locals => {notice: notice} %>
<%= render partial: 'notices/shared/paragraph', :locals =>
    {content: "SUBJECT: #{notice.employer_profile.legal_name}  HAS REMOVED YOU AS THEIR BROKER"} %>
<%= render partial: 'notices/shared/paragraph', :locals =>
    {content: "Dear #{notice.broker_agency_profile.legal_name},"} %>
<%= render partial: 'notices/shared/paragraph', :locals => {
    content: "This notice is to inform you that #{notice.first_name} #{notice.last_name } is no longer the broker of record for  #{notice.employer_profile.legal_name} as of #{notice.terminated_broker_account.end_on.to_date}. You will no longer be authorized to access #{notice.employer_profile.legal_name} 's #{Settings.site.short_name} Account or take action on behalf of #{notice.employer_profile.legal_name} or any employees of #{notice.employer_profile.legal_name}."} %>
<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
    { contents: ["Please contact <a href=#{Settings.site.home_url}>#{Settings.site.short_name}</a> with any questions:"], heading: 'For Questions or Assistance:', sub_heading: ''} %>
<%= render partial: 'notices/shared/unordered_list', :locals => { listings:
                                                                      ["By calling #{Settings.contact_center.phone_number}.",
                                                                       "TTY: #{Settings.contact_center.tty}",
                                                                       "Online at <a href=#{Settings.site.home_url}> #{Settings.site.website_name}</a>"] } %>