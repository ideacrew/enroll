<%= render partial: 'notices/shared/cover', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo' %>
<%= render partial: "notices/shared/address", :locals => {notice: notice} %>
<br><br><br><br><br>
<%= render partial: 'notices/shared/date', :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td class="notice-font">Dear <%=notice.primary_fullname%></td>
    </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "This notice confirms your election to terminate your employer-sponsored medical insurance with #{notice.employer_name}. Your coverage into #{notice.plan.plan_name} for you and any covered dependents will end on #{notice.enrollment.terminated_on}."} %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "If you experience a qualifying event at a later date, you may be eligible to apply for a special enrollment period (SEP) and enroll in employer-sponsored health insurance. Please visit the <a href= '#{site_policies_url}'>Policies</a> section on <a href= '#{site_main_web_address_url}'>#{site_website_name}</a> for additional information about requesting an SEP."} %>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
    { heading: 'For Questions or Assistance:',
      col_styles: ['margin-bottom: 0px']} %>
<%= render partial: 'notices/shared/unordered_list', locals: {
   previous: "Please contact your broker for further assistance. You can also contact the #{site_short_name} with any questions:",
   listings: ["By calling #{contact_center_phone_number}.  TTY: #{contact_center_tty_number}",
              "By email: <a href='mailto:#{small_businesss_email}'>#{small_businesss_email}</a>"] } %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "You can also find more information on our website at <a href= '#{site_main_web_address_url}'>#{site_website_name}</a>"} %>
 
<% if notice.broker.present? %>
  <%= render partial: 'notices/shared/paragraph', :locals => { content: "Please contact your broker for further assistance. You can also contact #{site_short_name} with any questions:"} %> <br>
  <%= render partial: 'notices/shared/broker_contact_info', :locals => {broker: notice.broker} %>
<% end %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "This notice is being provided in accordance with 45 CFR 155.735(g)(1)."} %>




