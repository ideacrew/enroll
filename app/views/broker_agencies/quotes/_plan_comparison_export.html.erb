<div class="container-fluid">
  <h3 class='inline-text-align-center'><%= l10n("plan_comparison_chart")%></h3>
  <div class="mygrid-wrapper-div">
   <table class="table bordered compare-table inline-font-size-11px", border = "1", id="compare_plans_table">
        <tr>
          <th class="row-title"><%= l10n("plans")%></th>
          <% qhps.each do |qhp|%>
            <th colspan="2" class='movable inline-border-none inline-qle-card'><%= display_carrier_logo(Maybe.new(qhp.plan), { width: 80, pdf: true }) %></th>
          <% end %>
        </tr>
        <tr>
          <th></th>
          <% qhps.each do |qhp|%>
            <th colspan="2" class="ttc fourteen blue inline-border-none inline-qle-card"><%= qhp.plan.name %></th>
          <% end %>
        </tr>
        <tr>
          <th></th>
          <% qhps.each do |qhp|%>
            <th class="fourteen lg inline-border-none inline-qle-card" colspan="2"><span class="<%= qhp.plan.metal_level.humanize.downcase %>-icon"><%= display_dental_metal_level qhp.plan %></span> &nbsp;&#149;&nbsp;
            <%= qhp.plan.plan_type.upcase %>
            </th>
          <% end %>
        </tr>
        <tr>
          <th><%= l10n("provider_network")%></th>
          <% qhps.each do |qhp|%>
            <th colspan="2">
              <%= render partial: "shared/network_data", locals: {plan: qhp.plan} %>
            </th>
          <% end %>
        </tr>

        <%= render partial: "shared/plan_shoppings/provider_directory_url", locals: {qhps: qhps}%>

        <% if qhps.map(&:plan).map(&:rx_formulary_url).compact.present? %>
          <tr>
            <th></th>
            <% qhps.each do |qhp|%>
              <th colspan="2">
                <% if qhp.plan.coverage_kind == "health" && qhp.plan.rx_formulary_url.present? %>
                  <%= link_to "#{l10n('broker_agencies.quotes.rx_formulary_url')}", qhp.plan.rx_formulary_url, target: "_blank" %>
                <% end %>
              </th>
            <% end %>
          </tr>
        <% end %>
        <tr>
          <th>PLAN BENEFITS <br> (In Network)</th>
          <% qhps.each do |qhp|%>
            <th colspan="1"> <%= l10n("co_pay")%> </th>
            <th colspan="1"> <%= l10n("coinsurance")%> </th>
          <% end %>
        </tr>
        <%= render partial: "plan_visit_types", locals: {qhps: qhps} %>
        <tr>
          <th></th>
          <% qhps.each do |qhp|%>
           <% if qhp.plan.sbc_document.present? %>
            <th colspan="2">
              <div class="plan_comparison">
                <% key, bucket = get_key_and_bucket(qhp.plan.sbc_document.identifier) %>
                <% link_text = qhp.plan.coverage_kind == 'health' ? "Summary of Benefits and Coverage" : 'Plan Summary' %>
                <%= link_to link_text, root_url + document_download_path(bucket, key) +
                                                  "?content_type=application/pdf&filename=#{qhp.plan.name.gsub(/[^0-9a-z]/i,'')}.
                                                  pdf&disposition=inline" %>
              </div>
            </th>
            <%end%>
          <% end %>
        </tr>
    </table>
  </div>
</div>
