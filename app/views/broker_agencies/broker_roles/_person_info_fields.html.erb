<%= render "shared/organization_staff_search", f: f %>

<div class="row">
  <div class="col-md-9 col-sm-9 col-xs-12">
    <div class="row no-buffer row-form-wrapper inline-border-top-0">
      <div class="col-md-6 col-sm-4 col-xs-12 form-group-lg no-pd">
        <%= f.text_field :email, class: "floatlabel form-control interaction-field-control-person-email", required: true, placeholder: "#{l10n('email').to_s.upcase} *" %>
      </div>
      <% if @filter != 'staff' %>
        <div class="col-md-6 col-sm-4 col-xs-12 form-group-lg no-pd">
          <%= f.text_field :npn, class: "floatlabel form-control npn_field interaction-field-control-person-npn", required: true, placeholder: "#{l10n('npn').to_s.upcase} *" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
