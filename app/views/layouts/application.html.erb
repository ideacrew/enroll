  </head>
  <body class="font">

    <%= render 'layouts/header' %>

    <div class="content <%= controller_name %> content-bottom">
      <%= render_flash %>
      <div class="container">
        <%= yield :horizontal_status %>

      </div>
        <%= yield %>
    </div>

    <%= render 'layouts/footer' %>

  </body>
 </html>
