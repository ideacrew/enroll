<% broker = @broker_roles.first %>
<% broker_agency_profile =  broker.broker_agency_profile%>
<%= link_to broker_agency_profile.legal_name, '#', data: {toggle: "modal", target: "#broker_show_#{broker.id}"} %>

<div class="modal fade" id="broker_show_<%= broker.id %>" tabindex="-1" role="dialog" aria-labelledby="brokerShow" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="no-buffer" id="active_broker_tab">
         <div class="col-xs-12">
			  <% active_broker = broker %>
			  <div class="row">

			  <div class="panel benefitgroup col-xs-12">
			        <div class="col-xs-4">
			          <header class="row">
			            <h5 class="bg-title inline-margin-bottom-0"><%= active_broker.person.full_name %></h5>
			            <span class="tt-u"><%= broker_agency_profile.legal_name %><span>
			          </header>
			        </div>

			        <div class="col-xs-8">
			        <table>
			          <tbody><tr>
			            <td>
			              <header>
			                <% if broker_agency_profile.organization.office_locations.any? %>
			                  <%= broker_agency_profile.organization.primary_office_location.address.address_1 %><br/>
			                  <%= broker_agency_profile.organization.primary_office_location.address.city %>,
			                  <%= broker_agency_profile.organization.primary_office_location.address.state %>
			                  <%= broker_agency_profile.organization.primary_office_location.address.zip %>
			                <% else %>
			                No Address
			                <% end %>
			              </header>
			            </td>
			            <td>
			                <% if active_broker.phone %>
			                <i class="fa fa-phone"></i>
			                  <%= active_broker.phone.to_s %>
			                  <% else %>
			                  <i class="fa fa-phone"></i>
			                  No Phone Number
			                <% end %>
			                <br/>
			                <i class="fa fa-at"></i>
			                <a href="mailto:<%= active_broker.email.address %>">
			                  <%= active_broker.email.address %>
			                </a>
			            </td>
			          </tr>
			        </tbody>
			      </table>
			    </div>
			    </div>

		      <div class="panel benefitgroup col-xs-12">
		        <div class="row">
		          <div class="col-xs-6">
		            <span class="lg ttu twelve">
		              New Clients:
		            </span>
		            <span class="dg">
		              <%= broker_agency_profile.accept_new_clients? ? 'Yes' : 'No' %>
		            </span>
		            <br/>
		            <span class="lg ttu twelve">
		              Weekend/Evening Hours:
		            </span>
		            <span class="dg">
		              <%= broker_agency_profile.working_hours? ? 'Yes' : 'No' %>
		            </span>
		          </div>
		          <div class="col-xs-6">
		            <span class="lg ttu twelve">
		              Language:
		            </span>
		            <span class="dg">
		              <%= broker_agency_profile.languages %>
		            </span>
		          </div>
		        </div>
		        <br/>

             <div class="modal-footer">
               <button type="button" class="btn btn-default btn-default" data-dismiss="modal">Close</button>
             <div/>
          </div>
      </div>
    </div>
  </div>
</div>
