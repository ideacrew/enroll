<div class="panel benefitgroup col-xs-12">
  <section class="col-xs-6">
    <header class="row">
      <h5 style="color: #69A30D; font-size: 18px;"><%= @plan.name %></h5>
    </header>
  </section>
  <section class="col-xs-6">
  </section>
  <h2></h2>
  <table>
    <tr>
      <th>
        <header>Type</header>
      </th>
      <th>
        <header>Carrier</header>
      </th>
      <th>
        <header>Metal Level</header>
      </th>
      <th>
        <header>Network</header>
      </th>
    </tr>
    <tr>
      <td>
        <p><%= @plan.plan_type.upcase %></p>
      </td>
      <td>
        <p><%= @plan.carrier_profile.legal_name %></p>
      </td>
      <td>
        <p>
          <%= @plan.metal_level.titleize %>
        </p>
      </td>
      <td style="padding-left: 0;">
        <p style="text-transform: capitalize;">
          <%= render partial: "shared/network_data", locals: {plan: @plan} %>
        </p>
      </td>

    </tr>
  </table>
  <div class="col-xs-12 row plan-details">
    <hr>
    <div class="col-xs-4 row">
      <span>Your Estimated Monthly Cost</span>
      <h2 class="employer-monthly-cost"></h2>
    </div>
    <div class="col-xs-8">
      <table>
        <tr>
          <th></th>
          <th>Min</th>
          <th>Max</th>
        </tr>
        <tr>
          <td>Estimated monthly cost including all roster employees</td>
          <td class="employee-monthly-cost-min"></td>
          <td class="employee-monthly-cost-max" style="padding-left: 0;"></td>
        </tr>
      </table>
    </div>
  </div>
</div>
