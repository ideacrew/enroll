<div class="employee-upload">
  <i class="fa fa-times fa-3x pull-right modal-close"></i>

  <div class="upload-preview">

  </div>
  <%= form_tag upload_document_employers_employer_profile_path(@employer_profile), multipart: true , method: 'post' do %>
      <%= file_field_tag :file, :accept => 'application/pdf' %>
      <%= label_tag :file, 'Select File To Upload', class: 'select btn btn-primary ' %>

      <div class="radio">
        <label><%= radio_button_tag :subject, 'Employee Attestation'%> <b style="margin-left: 25px">Employer Attestation </b></label>
      </div>
      <%= submit_tag 'Upload', class: 'btn btn-primary ' %>
  <% end %>
</div>