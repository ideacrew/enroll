  <% flag = @census_employee.is_linked? && @census_employee.address.present? %>
    <div class="row row-form-wrapper no-buffer address-row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-1 form-group form-group-lg no-pd">
        <%= f.hidden_field :kind, value: address_kind %>
        <%= f.text_field :address_1, placeholder: "#{address_kind.upcase} ADDRESS LINE 1 (NUMBER, STREET, QUADRANT)", class: "floatlabel form-control border-bottom-none border-right-none", required: true,:readonly => flag %>
      </div>
    </div>
    <div class="row row-form-wrapper no-buffer address-row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-1 form-group form-group-lg no-pd">
        <%= f.text_field :address_2, placeholder: "#{address_kind.upcase} ADDRESS LINE 2 (APT, UNIT, ETC.)", class: "floatlabel form-control border-bottom-none",:readonly => flag  %>
      </div>
    </div>

    <div class="row row-form-wrapper no-buffer address-row">
      <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :city, placeholder: "CITY", class: "floatlabel form-control", required: true, :readonly => flag  %>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
        <%= f.select(:state, options_for_select(State::NAME_IDS.map(&:last), selected: f.object.state), {include_blank: "SELECT STATE"}, {:disabled => flag})  %>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
        <%= f.text_field :zip, placeholder: "ZIP", class: "floatlabel form-control zip", required: true, :readonly => flag  %>
      </div>
    </div>
