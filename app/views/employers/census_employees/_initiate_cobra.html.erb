<div class="table-responsive table-override">
  <table class="table table-striped table-bordered border-override" style="table-layout: fixed;">
    <td class="confirm-cobra-wrapper show_confirm_<%= @census_employee.id %>" colspan="10" id="enter-date">
      <tr>
        <td class="confirm-cobra-wrapper show_confirm_<%= @census_employee.id %>"  colspan="10"  id="cobra-enter-date">
          <div class="confirm-cobra <%=pundit_class EmployerProfile, :updateable?%>">
            <h5 style="margin-top: 0; margin-bottom: 0;"><strong>Enter effective date for COBRA coverage to begin</strong>
              <br/>
              <span class="lg fourteen">(Cobra effective date must be within the past 6 months)</span>
            </h5>
            <div class="pull-right" style="margin-top: 2px;">
              <i class="fa fa-calendar fa-lg"></i> <input class="text-center date-picker" data-date-min="<%= @census_employee.suggested_cobra_effective_date %>" data-date-max="<%= @census_employee.suggested_cobra_effective_date %>" placeholder="MM/DD/YYYY" type="text" value="<%= @census_employee.suggested_cobra_effective_date %>">
              <a class="cobra_confirm cobra" data-employee-id="<%= @census_employee.id %>" data-link="<%= employers_employer_profile_census_employee_cobra_path(@employer_profile.id, @census_employee.id) %>" href="#" id="cobra-<%= @census_employee.id %>" onclick="EmployerProfile.submitCobraDate">
                Initiate COBRA
              </a>
              <a class="cobra cancel" style="margin-right: 15px;">Cancel</a>
            </div>
          </div>
        </td>
      </tr>
    </td>
  </table>
</div>
