<!-- ==== Extend request ==== -->

<!-- ***** View History ***** -->
<div class="row">
  <div class="view-history col-md-12" id=<%="#{person.id}-#{v_type.split.join('-')}-history"%>>
    <div>
      <h5>Verification History</h5>
      <table class="table table-bordered table-hover table-responsive">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Date</th>
          <th scope="col">Type</th>
          <th scope="col">Action</th>
          <th scope="col">Modifier</th>
          <th scope="col">Update Reason</th>
        </tr>
        </thead>
        <tbody>
        <% person.consumer_role.verification_type_history_elements.select{|el| el.verification_type == v_type }.each_with_index do |record, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= record.created_at %></td>
              <td><%= record.verification_type %></td>
              <td><%= record.action.split('_').join(" ").capitalize %></td>
              <td><%= record.modifier %></td>
              <td><%= record.update_reason %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- ==== view history ==== -->
