<% step = (defined? step) ? step.to_i : 0 %>
<%
percent_complete = 0
percent_complete = (step == 1) ? 33 : ((step == 2) ? 66 : ((step == 3) ? 100 : 0))
%>

 <% if display_aasm_state? hbx_enrollment %>
    <div class="text-right">
      <% if formatted_enrollment_states(hbx_enrollment).present? %>
        <span class="label label-success canceled">
          <%= formatted_enrollment_states(hbx_enrollment) %>
        <span>
      <% else %>
        <span class="label label-success">
          <%= hbx_enrollment.aasm_state.titleize %>
        <span>
      <% end %>
    </div>
<% end %>

