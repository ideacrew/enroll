<% if @bs4 %>
  <div class="container mb-0 px-0">
    <div class="alert alert-info d-flex flash" role="alert">
      <div class="info-icon icon flex-shrink-0" alt="info"></div>

      <% if EnrollRegistry.feature_enabled?(:verbose_sep_message) %>
        <div>
          <p>
            <%= l10n("insured.sep_verbose_eligibility_alert", sep_end_date: @active_sep.end_on ) %>
          </p>

          <%= build_link_for_sep_type(@active_sep, nil, local_assigns[:family_id], link_class = "text-reset mt-2" ) %>
        </div>
      <% else %>
        <div class="font-weight-bold d-flex">
          <%= l10n("insured.sep_eligibility_alert", sep_end_date: @active_sep.end_on ) %>

          <%= build_link_for_sep_type(@active_sep, nil, local_assigns[:family_id], link_class = "btn btn-default ml-1") %>
        </div>
      <% end %>

    </div>
  </div>
<% else %>
  <div id="sep_message" class="alert alert-notice">
    <a href="#" data-dismiss="alert" class="close interaction-click-control-×">×</a>
    <div class="row">
      <div class="col-md-11 col-sm-12 col-xs-12">
        <% if EnrollRegistry.feature_enabled?(:verbose_sep_message) %>
            <div style="color: #323130;">
              <%= l10n("insured.sep_verbose_eligibility_alert", sep_end_date: @active_sep.end_on ) %>
              <span style="text-decoration: underline" class="font-weight-bold font-color-inherit">
                <%= build_link_for_sep_type(@active_sep, nil, local_assigns[:family_id]) %>
              </span>
            </div>
        <% else %>
          <strong>
            <%= l10n("insured.sep_eligibility_alert", sep_end_date: @active_sep.end_on ) %>
            <div class="btn btn-default ml-1">
              <%= build_link_for_sep_type(@active_sep, nil, local_assigns[:family_id]) %>
            </div>
          </strong>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
