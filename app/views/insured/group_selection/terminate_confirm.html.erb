<div class="container">
  <div class="row">
    <div class="col-md-2">
      <br>
      <%= link_to l10n("back_to_my_account"),  family_account_path, class: 'btn btn-default btn-default' %>
    </div>
    <br class="clear"/>
    <br/>
    <div class="col-md-12 row">
      <div class="container">
        <div class="row">
          <div class="col-xs-9">
            <% hbx_enrollment = @hbx_enrollment %>
            <% plan = hbx_enrollment.try(:plan) %>
            <div class="hbx-enrollment-panel module">
            <div class="panel panel-default min-h">

              <div class="panel-heading">
                <h4><%= plan.active_year %> <%= l10n("health_coverage") %> <span class="separator"><%= l10n("DCHL") %></span></h4>
                <hr>
              </div>

              <div class="panel-body">
                <div class="row">
                  <div class="col-xs-8">
                    <div><%= display_carrier_logo(Maybe.new(plan), {width: 110}) %></div>
                    <h4><strong><%= link_to plan.try(:name), summary_products_plans_path({:standard_component_id => plan.try(:hios_id), hbx_enrollment_id:hbx_enrollment.id, active_year: plan.try(:active_year)}), remote: true %></strong>
                    </h4>
                      <div><p><%= render_plan_type_details(plan) %></p></div>
                      <div>
                        <p>
                          <label><%= l10n("premium") %>:</label> <strong><%= number_to_currency(current_premium(hbx_enrollment), precision: 2) %></strong>/<%= l10n("month").to_s.downcase %>
                          <label class="bullet-separator">&nbsp;<%= l10n("DCHL_ID") %>:</label> <strong><%= hbx_enrollment.hbx_id %></strong>
                        </p>
                      </div>
                        <% names = hbx_enrollment.covered_members_first_names %>
                        <div class="family-members">
                          <p>
                            <label><%= l10n("covered") %>:</label>
                              <a href="#"><%= names.delete_at(0).camelcase %></a>
                              <% names.each do |name| %>
                                <span class="separator"><a href="#"><%= name.camelcase %></a></span>
                              <% end %>
                          </p>
                        </div>
                        <div>
                          <label><%= l10n("effective_date") %>: </label>
                          <strong><%= hbx_enrollment.effective_on %></strong>
                        </div>
                      </div>
                      <div class="col-xs-4">
                        <div class="family-plan-selection">
                          <div class="status">

                          </div>
                         </div>
                      </div>
                </div>

                <div class="row">
                      <div class="col-xs-4 fa-icon-link">
                        <%= render partial: "shared/plan_shoppings/sbc_link", locals: { plan: plan } %>
                      </div>
                      <div class="col-xs-4">
                        <a href="#">
                          <i class="fa fa-phone fa-2x"></i><div class="fa-icon-label"><%= l10n("plan_contact_info") %></div>
                        </a>
                      </div>
                      <div class="col-xs-4">
                      </div>
                </div>
                <div class="row">
                  <div class="col-sm-4">
                    <a id="terminate-button" class="btn btn-default btn-block interaction-click-control-terminate-plan" >Terminate Plan</a>
                  </div>
                  <!-- href="/insured/group_selections/terminate_confirm?hbx_enrollment_id=5cf27c6e9ee4f417d6000004" -->
                  <div class="col-sm-4">
                    <a id="cancel-button" class="btn btn-default btn-block interaction-click-control-cancel-plan" >Cancel Plan</a>
                  </div>
                  <div class="col-sm-4">
                    <a id="aptc-button" class="btn btn-default btn-block interaction-click-control-edit-aptc" >Edit APTC</a>
                  </div>
                </div>
              </div>

                  <!-- <div class="alert alert-warning alert-dismissible panel-footer" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Important:</strong> Your enrollment application requires information that needs to be verified. <a href="#">Learn more</a>
                  </div> -->
            </div>
          </div>

            </div>

            <!-- confirm text -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 right-section confirmation hidden" id="terminate-confirm">
              <h3><%= l10n("confirmation") %>:</h3>
              <p><%= l10n(".terminate_this_plan_do_you_wish_proceed") %></p>
              <div>
                <%= radio_button_tag :agreement, "terminate-confirm-yes" %><%= l10n("yes") %><br>
                <%= radio_button_tag :agreement, "terminate_confirm_no" %><%= l10n("no") %>
              </div>
              <br/>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 right-section confirmation hidden" id="cancel-confirm">
              <h3><%= l10n("confirmation") %>:</h3>
              <p><%= l10n(".cancel_this_plan_do_you_wish_to_proceed") %></p>
              <div>
                <%= radio_button_tag :agreement, "cancel-confirm-yes" %><%= l10n("yes") %><br>
                <%= radio_button_tag :agreement, "cancel_confirm_no" %><%= l10n("no") %>
              </div>
              <br/>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 right-section confirmation hidden" id="aptc-confirm">
              <h3><%= l10n("confirmation") %>:</h3>
              <p><%= l10n(".do_you_wish_to_proceed_with_updating_the_applied_aptc") %></p>
              <div>
                <%= radio_button_tag :agreement, "aptc-confirm-yes" %><%= l10n("yes") %><br>
                <%= radio_button_tag :agreement, "aptc_confirm_no" %><%= l10n("no") %>
              </div>
              <br/>
            </div>

            <!-- calendar div NOT conditional -->
            <div id="calendar-div" class="hidden">

              <!-- calendar confirm -->
              <%= form_tag terminate_insured_group_selections_path(hbx_enrollment_id: hbx_enrollment.id), method: :post %>
                <div id="term-date-confirm-date" class="col-xs-3">
                  <h5 id="enter-text">Enter the date of termination</h5>
                  <%= text_field_tag 'term_date', '',:'data-date-min'=> "+0d", placeholder: " ", class: "required date-picker term-date-picker floatlabel form-control", required: true %>
                 </div>

                 <div id="applied-aptc-text" class="col-xs-3 hidden">
                   <h5>Max Applied APTC</h5>
                   <h5>100.00</h5>
                   <h5>Applied APTC Ratio</h5>
                   <span align= "center"><output id="aptc_applied_pct_1_percent" name="aptc_applied_pct">88%</output></span>
                    <input id = "applied_pct_1" name='applied_pct_1' type="range" min="0" max="1" step="0.025" value=".88" style = "padding: 0px;">
                    <h5>Applied APTC</h5>
                    <input type="text" name="aptc_applied_5cf6c9ec9ee4f43836000020" id="aptc_applied_5cf6c9ec9ee4f43836000020" value="87.50" placeholder="APTC Applied" class="form-control" size="8px">
                 </div>

                 <div class="col-xs-3">
                   <br>
                    <%= submit_tag l10n("confirm"), class: 'button btn btn-lg btn-primary  btn-block interaction-click-control-terminate', id: 'btn-terminate', :disabled => true %>
                </div>
            </div>
          </div>
        </div>

        <script type="text/javascript">
          $(document).ready(function(){
            $(".interaction-choice-control-value-agreement-terminate-confirm-yes").click(function(){
              $(".interaction-click-control-terminate").attr("disabled", false);
              $("#term-date-confirm-date").attr("hidden", false);
            });
            $(".interaction-choice-control-value-agreement-terminate-confirm-no").click(function(){
              $(".interaction-click-control-terminate").attr("disabled", true);
              $("#term-date-confirm-date").attr("hidden", true);
            });
          });
        </script>

    </div>
</div>
