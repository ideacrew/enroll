<%= f.hidden_field :employee_role_id %>

<%= render "shared/error_messages", object: f.object %>
<%= render 'shared/person/personal_information', f: f %>

<div id="employer-info" class="row">
  <%= render "employers" %>
</div>
<%= render 'shared/home_address_fields', f: f %><br>
<%= render 'shared/phone_fields', f: f %><br>

<div id="email_info" class="row row-form-wrapper no-buffer">
  <%= f.fields_for :emails, errors: {}, fieldset: true do |email|  %>
    <%= render 'shared/email_fields', f: email %>
  <% end %>
</div>

<%= render 'shared/contact_preferences', {f: f, role: :employee_roles, contact_preferences_mapping: {}} %>
