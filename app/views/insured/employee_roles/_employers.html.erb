<div class="col-md-6 col-sm-6 col-xs-12">
  <%= render 'shared/employer', employer: @employee_role.employer_profile, employee: @employee_role.new_census_employee, effective_on: @employee_role.coverage_effective_on if @employee_role.coverage_effective_on.present? %>
</div>
<div class="col-md-1 col-sm-1 col-xs-12"></div>
<div class="col-md-5 col-sm-5 col-xs-12 text-right">
  <p>
    <%= l10n("is_not_your_employer") %>
    <%= link_to l10n("click_here"), '#', data: {toggle: "modal", target: "#notEmployer"} %>
  </p>
</div>

<div class="modal fade" id="notEmployer" tabindex="-1" role="dialog" aria-labelledby="notEmployerLabel" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= l10n("is_not_your_employer") %></h4>
      </div>
      <div class="modal-body">
        <p>
          <%= l10n("insured.employee_roles.not_your_employer_modal_body", site_short_name: site_short_name) %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= l10n("close") %></button>
      </div>
    </div>
  </div>
</div>

<script nonce="<%= content_security_policy_nonce %>">
  $(".change_personal_info").click(function(){
    $('.search-btn-row').removeClass('hidden');
    $('#employer-info').html("");
    $(".employer_info").html('');
  });

  $(".badge").on('click',function(){
    $('.badge').removeClass('badge-active');
    $(".person-search-form").removeClass('person-search-form-active');
    $(this).toggleClass('badge-active');
    $(this).closest(".person-search-form").addClass('person-search-form-active');
    url = $(".badge-active").attr("data-url");
    $('.search_continue').attr("href",url);
  });
</script>
