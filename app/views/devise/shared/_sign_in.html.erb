<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "EMAIL ADDRESS", id: "inputEmail" %>
        <%= f.password_field :password, class: "form-control", placeholder: "PASSWORD", id: "inputPassword" %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me, value: "remember-me" %> Remember me
          </label>
        </div>
        <%= f.submit 'Create account', class: "btn btn-lg btn-primary btn-block" %><br>
        <b>OR</b> <br><br>
        <%= link_to "Create account", new_registration_path(resource_name), class: "btn btn-lg btn-primary btn-block" %>
      </form>
    </div>
  </div>
<% end %>
