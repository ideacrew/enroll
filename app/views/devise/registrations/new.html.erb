<div class="container signin top-pd">
  <div class="col-md-3 col-sm-2 col-xs-12"></div>
    <div class="col-md-6 col-sm-8 col-xs-12">
      <h1>Create account</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'input-no-pd'}) do |f| %>
  	      <%= devise_error_messages! %>
	        <%= f.hidden_field :referer, value: request.env["HTTP_REFERER"] %>

	        <div class="form-group">
	          <%= f.label :email %>
	          <%= f.email_field :email, class: "form-control", required: true %>
	        </div>

	        <div class="form-group">
	          <%= f.label :password %>
	          <% if @validatable %>
	          <em>(<%= @minimum_password_length %> characters minimum)</em>
	          <% end %><br />
	          <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
	        </div>

	        <div class="form-group">
	          <%= f.label :password_confirmation %><br />
	          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
	        </div>
      		<%= f.hidden_field :invitation_id %>

          <br>
	        <div class="actions">
	          <%= f.submit "Create account", class: "btn btn-primary btn-lg btn-br mz" %>
            <%= link_to "Sign In Existing Account", new_user_session_path , class: "btn btn-default btn-lg" unless Rails.env.production? %>
            <%= link_to "Sign In", url_for(SamlInformation.iam_login_url) , class: "btn btn-default btn-lg" unless Rails.env.development? %>
	        </div>
		    <% end %>
      </div>
    </div>
  </div>
</div>
