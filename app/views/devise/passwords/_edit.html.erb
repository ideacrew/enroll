<div class="modal fade" id="passwordChangeModal" tabindex="-1" role="dialog" aria-labelledby="passwordChangeModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="passwordChangeModalLabel">Change my password</h4>
      </div>
      <%= form_for(current_user, as: User, url: main_app.change_password_user_path(current_user), html: { method: :post }) do |f| %>
        <div class="modal-body">
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :password, "Current Password" %><br />
              <%= f.password_field :password, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :new_password, "New Password" %><br />
              <%= f.password_field :new_password, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm New Password" %><br />
              <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
            </div>
        </div>
        <div class="modal-footer">
          <div class="form-group form-group-actions">
           <%= f.submit "Change my password", class: "btn btn-primary sm_full_width" %>
           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
