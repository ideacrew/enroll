<% if @bs4 %>
  <li class='paginate_button next'>
    <%= link_to_unless current_page.last?, l10n('next'), url, :rel => 'next', :remote => remote %>
  </li>
<% else %>
  <li>
    <%= link_to_unless current_page.last?, raw(t 'views.pagination.next'), url, :rel => 'next', :remote => remote %>
  </li>
<% end %>
