<%= render "ui-components/v1/navs/primary_nav.html.slim" %>

<div class='container'>

  <h2>Data Seeds <%= "(0 present)" if @seeds.blank? %></h2> <%= link_to "New Seed", main_app.new_exchanges_seed_path, class: "btn btn-lg btn-primary" %>

  <div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Date Created</th>
        <th scope="col">Created By</th>
        <th scope="col">Row Count</th>
        <th scope='col'>Filename</th>
        <th scope="col">Edit Seed</th>
      </tr>
    </thead>
    <tbody>
      <% @seeds.each do |data_seed| %>
            <tr scope="row">
              <td><%= data_seed.created_at.to_s %></td>
              <td><%= data_seed&.user&.email || data_seed&.user&.person&.full_name %></td>
              <td><%= data_seed.rows.count.to_s %></td>
              <td><%= data_seed&.filename %></td>
              <td>
                <%= link_to(
                        "View/Edit Seed",
                        main_app.edit_exchanges_seed_path(data_seed._id),
                        class: "btn btn-info"
                    )
                %>
              </td>
            </tr>
      <% end %>
    </tbody>
  </table>
</div>
