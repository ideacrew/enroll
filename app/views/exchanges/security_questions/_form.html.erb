<%= form_for [:exchanges, @question], html: {class: 'form-horizontal question-form'} do |f| %>
    <% if @question.errors.any? %>
        <div class="alert alert-error">
          <h4>
            <%= "#{pluralize(@question.errors.size, "error")} #{l10n("exchange.security_questions.error_cant_save")}" %>
          </h4>
          <ul>
            <% @question.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, { required: true } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :visible, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.check_box :visible %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.button :submit, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
