function hideElement(element) {
  <% if @bs4 %>
    element.addClass('hidden');
  <% else %>
    element.hide();
  <% end %>
}

function showElement(element) {
  <% if @bs4 %>
    element.removeClass('hidden');
  <% else %>
    element.show();
  <% end %>
}

