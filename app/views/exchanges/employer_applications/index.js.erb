function pyAction(action, id, term_date) {
  actionSelected = action;
  showPlanYearActions(id);
  if (action == "reinstate") {
    disableDatePicker();
    $('input#datepicker').val(<%= Date.today %>);
    hideTerminationRadios();
    enableSubmitButton()
  }
  
  if (action == 'terminate') {
    showTerminationRadios();
    clearDatePickerValue();
    disableSubmitButton();
  }
  
  if (action == 'cancel') {
    hideTerminationRadios();
    clearDatePickerValue();
    disableSubmitButton();
  }
}
