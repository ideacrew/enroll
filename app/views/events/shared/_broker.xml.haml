- if hbx_enrollment.broker_agency_account.writing_agent
  - broker_agency_account = hbx_enrollment.broker_agency_account
  - writing_agent = broker_agency_account.writing_agent
  %broker
    %id
      %id= writing_agent.npn
    %name= writing_agent.person.full_name
