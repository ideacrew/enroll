var Freebies = ( function( window, undefined ) {

	function fadeElement(element) {
		element = element;
		element.css({
		    "opacity":"0",
		    "display":"block",
		}).show().animate({
	    opacity: 1
	  }, 200 )
		}

	function allFreebies() {
		  // apply floatlabels
			floatLabels();
		  // apply selectric
		  selectric();
			// apply popover
			popover();
			// apply maual popover
			manualPopover()
			// apply tooltips
			tooltip();
			// apply datepickers
			applyJQDatePickers();
  }

	function datePicker() {
		// apply datepicker
		applyJQDatePickers();
	};

	function tooltip() {
		// apply tooltips
		$('[data-toggle="tooltip"]:not(".manual")').tooltip();
	}

	function manualTooltip() {
		// apply tooltips
		$('.manual[data-toggle="tooltip"]').tooltip({
			trigger: 'manual'
		}).tooltip('show');
	}

	function popover() {
		// apply tooltips
		$('[data-toggle=popover]:not(".manual")').popover();
	}

	function manualPopover(element) {
		$(".manual[data-toggle=popover]").popover({
			trigger: 'manual'
		});
		if (element != null) {
			element.popover('show');
		}
	}

	function floatLabels() {
		  // apply floatlabels
			$('input.floatlabel').floatlabel({
			  slideInput: false
			});
  }

	function selectric() {
		// apply selectric
		$("select[multiple!='multiple']").selectric();
	}

	// disabled enter key submitting disabeld forms in firefox -- add this to any element in the page onKeyPress="return disableEnterKey(event)"
	function disableEnterKey(e) {
		var key;
		if (window.event) {
			key = window.event.keyCode;     //IE
		} else {
			key = e.which;     //firefox
		}
		if (key == 13) {
			return false;
		} else {
			return true;
		}
	}

	return {
		manualTooltip: manualTooltip,
		manualPopover: manualPopover,
    allFreebies : allFreebies,
		floatlabels : floatLabels,
		selectric : selectric,
		disableEnterKey : disableEnterKey,
		popover : popover,
		tooltip : tooltip,
		datePicker : datePicker,
		fadeElement: fadeElement
	};

} )( window );
