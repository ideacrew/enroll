.module {
  &#signup{
    .has-error .form-control {
      border-color: #a94442;
      -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
      box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
    }
    .tooltip_box {
      position: absolute;
      margin-top: -80px;
      left: 100%;
      width: 350px;
      padding: 15px;
      padding-left: 20px;
      background: #fefefe;
      background-color: #002E60;
      color: #ffffff;
      font-size: .875em;
      border-radius: 5px;
      z-index: 1080;
      ul {
        padding-left: 0;
        list-style-type: none;
        li {
          padding-left: 5px;
          padding-left: 20px;
          font-size: 13px;
        }
        .valid {
          background: url('<%= asset_path('checkmark-green.png') %>') no-repeat 0 50%;
          background-size: 13px;
          padding-left: 22px;
          line-height: 24px;
          color: #bef470;
        }
        .invalid {
          background: url('<%= asset_path('false-red.png') %>') no-repeat 0 50%;
          background-size: 13px;
          padding-left: 22px;
          line-height: 24px;
          color: #FFF;
        }
      }
    }
    .tooltip_box::before {
      content: "\25C4";
      position:absolute;
      top:47%;
      left:-8px;
      font-size:14px;
      line-height:14px;
      text-shadow:none;
      display:block;
      color: #002E60;
    }
    #pswd_info {
      margin-top: -170px;
    }
    .pass-strength {
      font-size: 14px;
      line-height: 23px;
      width: 135px;
    }
    #complexity, #results {
      padding: 3px 0;
      height: 5px;
      color: #000;
      font-size: 12px;
      text-align: center;
      display: inline-block;
      vertical-align: middle;
      margin-left: 5px;
    }
    .weak {
      background-color: #e72b2d;
      width: 20px;
    }
    .strong {
      background-color: #FAD054;
      width: 40px;
    }
    .stronger {
      background-color: #93C9F4;
      width: 60px;
    }
    .strongest {
      background-color: #005fd6;
      width: 70px;
    }
    .conpass-false {
      background-image: url('<%= asset_path('false-red.png') %>');
      background-position: 50px 4px;
      background-repeat: no-repeat;
      background-size: 17px auto;
      color: #414141;
      font-size: 14px;
      height: 25px;
      line-height: 25px;
      width: 135px;
    }
    .conpass-success {
      background-image: url('<%= asset_path('checkmark-green.png') %>');
      background-position: 50px 7px;
      background-repeat: no-repeat;
      background-size: 15px auto;
      color: #414141;
      font-size: 14px;
      height: 25px;
      line-height: 25px;
      width: 135px;
    }
  }
}

