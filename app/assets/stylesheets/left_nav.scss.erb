#left-navigation {
  a:visited, a.visited {
    color: #CBE6FF;
    font-size: 14px;
    font-weight: 600;
  }

  a:hover
  {
    text-decoration: underline;
  }

  .applicant-nav a:visited {
    color: $primary-blue;
    font-size: 14px;
  }

  .income-style {
    border-left: 7px solid #ffffff !important;
    a
    {
      color: #ffffff !important;
    }
  }

  .active.applicant-nav a {
    font-weight: 600;
  }

  .active.indent-w {
    border-left: 7px solid #fff !important;
  }
  .white-font {
    color: #CBE6FF;
  }

  .activer.global-nav > a {
    color: #CBE6FF;
  }

  li:not(.activer) a:not(.disabled) {
    color: $primary-blue;
  }

  .active {
    border-left: 7px solid $primary-blue !important;
    a
    {
        padding-left: 10px;
    }
  }

  .global-nav.active {
    border-left: 7px solid #ffffff;
  }

  .disabled {
    background-color: white;
  }

  .global-nav.active a {
    color: #ffffff;
  }

  .active a {
    font-size: 14px;
    font-weight: 600;
  }

  .applicant-nav {
    &:first-of-type {
      border: 1px solid #c3c3c3;
    }

    background: #ffffff;
    a {
     background: #ffffff;
     font-weight: normal;
      width: 99%;
   }
  }

  li {
    background-color: #fff;
    border: 1px solid #c3c3c3;
    display: table;
    width: 100%;
    min-height: 54px;
    a {
      height: 50px;
      line-height: 18px;
      vertical-align: middle;
      display: table-cell;
      padding-top:4px;
      padding-bottom:4px;
    }
  }

  li.active.applicant-nav {
    span.applicant-check
    {
        margin-left:-4px;
    }
  }

  .no-check
  {
    padding-left: 45px !important;
  }

  li.active
  {
    a.no-check
    {
      padding-left: 37px !important;
    }
  }



  li:first-child {
    border: 0px;
  }

  li:nth-child(n+2) {
    border-top: 1px solid #ffffff;
  }

  li:last-child {
    border-bottom: 1px solid #c3c3c3;
  }

  .applicant-check {
    color: #89B54A;
    padding-left: 16px;
    padding-top:17px;
  }
  .cna {
    cursor: not-allowed !important;
    color: #2E2E2E !important;
  }

  .cna {
    font-weight: normal;
  }
}

.nav > li.no-hover > a:hover, .nav > li.no-hover > a:focus {
  text-decoration: none;
  background-color: $primary-blue !important;
}

.nav > li.no-hover-disable > a:hover, .nav > li.no-hover-disable > a:focus {
  text-decoration: none;
  background-color: #ffffff !important;
}

.nav > li.activer.no-hover-disable > a:hover, .nav > li.activer.no-hover-disable > a:focus {
  text-decoration: none;
  background-color: $primary-blue !important;
}
.mr-top {
  margin-top: 0px !important;
}
.bd-top
{
  border-top: none !important;
}

.p0
{
  padding: 0px;
}
.pdl20
{
  padding-left: 20px;
}

.ln-ht-nav
{
  line-height: 2.5 !important;
}

