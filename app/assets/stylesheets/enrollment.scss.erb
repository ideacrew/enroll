@import "variables";

.plan-tile {
    padding: 12px;

    .plan-header {
        display: flex;
        flex-direction: row;
        align-items: center;
        height: 100px;
        gap: 20px;

        .plan-name-and-status {
            display: flex;
            flex-direction: column;
            height: 100px;
            gap: 5px;
        }

        h3 {
            margin: 0;
            justify-self: left;

            a {
                color: black !important;
                font-size: 18px;
                font-weight: 700;
            }
        }
    }




}