@import 'variables';

.plan-tile {
    padding: 12px;
    font-size: medium;

    .plan-header {
        display: flex;
        flex-direction: row;
        align-items: center;
        height: 100px;
        gap: 20px;

        img {
            flex: 0;
        }

        .plan-name-and-status {
            display: flex;
            flex-direction: column;
            height: 100px;
            gap: 5px;
            flex: 1;

            .plan-status-container {
                min-height: 20px;
            }

            h3 {
                margin: 0;
                justify-self: left;

                a {
                    color: black !important;
                    font-size: 18px;
                    font-weight: 700;
                }
            }
        }
    }

    .plan-details {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        color: #605e5c;

        div[class$='-column'] {
            flex: 1;

            &>div {
                display: flex;
                flex-direction: row;
            }
        }

        label {
            font-weight: 600;
            flex-basis: 45%;
        }
    }

    .plan-covered {
        padding: 12px 0 0 0;
        color: #605e5c;

        label {
            font-weight: 600;
            margin-right: 12px;
        }
    }

    .plan-button-group {
        display: flex;
        flex-direction: row;
        gap: 20px;
        font-size: 16px;
        justify-content: space-between;
        flex-wrap: wrap;

        .enrollment-actions-ddl {
            flex-basis: 85px;
            text-align: right;
        }

        .btn {
            height: 34px;

            &:hover {
                color: #23527c;
                border-color: #23527c;
            }

            a:hover {
                text-decoration: none;
            }

            i {
                font-size: 1.2em;
            }
        }
    }
}