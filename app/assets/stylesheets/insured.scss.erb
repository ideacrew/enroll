      }
    }
    td, th {
      border-left: 1px solid #ddd;
      border-right: none;
      &:first-of-type {

      }
    }

  }
  .row-title {
    font-size: 24px;
    color: #414141;
    font-weight: 600;
  }
}
.module {
  &.ivl-documents-table {
    margin-top: 1.25%;
    .demo-up {
      border: 0 !important;
      -webkit-appearance: none;
      -moz-appearance: none;
      width: 150px;
      text-overflow: "";
      border-radius: 15px;
      padding: 0px;
      margin: 0px;
    }

    #verification-reason {
      padding-left: 0;
      list-style-type: none;
      .n-radio-row {
        padding: 0;
        border: none;
      }
      li {
        margin-left: -30px;
      }
      .btn-primary {
        font-size: 14px;
        padding: 5px 10px;
      }
      input[type="submit"] {
        margin: 10px 0 0;
        cursor: pointer;
      }
    }


    &.verif-type {
      margin-right: 20px;
    }

  	&.modal-footer {
  		.modal-sbc-link {
  			text-align: left;
  			position: relative;
  			.fa.fa-file-pdf-o {
  				margin: 2px auto auto 5px;
  			}
  			.sbc-text {
  				font-size: 14px;
  				margin-left: 10px;
  				position: absolute;
  				white-space: nowrap;
  				top: 10px;
  			}
  		}
  	}
    .table {
      width: 100%;
      table-layout: fixed;
      .thead-default {
        tr {
          background-color: #fff;
          th {
            text-align: center;
            vertical-align: middle;
            &:last-of-type {
              width: 5%;
            }
          }
        }
      }
      tbody {
        tr {
          &.top {
            &:hover .table-functions .fa {
              color: $primary-blue;
            }
            &.even {
              background-color: #ffffff !important;
              &:hover {
                background-color: #f5f5f5 !important;
              }
            }
            td {
              padding: 6px 12px;
            }
          }
          &.dn {
            &:hover {
              background-color: transparent;
            }
            td.td-container {
              padding: 0px 12px;
              .table-responsive {
                overflow: visible;
								.table {
									margin-bottom: 0;
								}
              }
            }
            table {
              &.table {
                background-color: #fff;
                margin: 0 0 12px;
                tr {
                  &.bt-n {
                    td {
                      border-top: none !important;
                    }
                  }
                  &.bb {
                    td {
                      border-bottom: none;
                    }
                  }
                  td {
                    padding: 10px 12px 10px 0;
                    .fa {
                      &.fa-download {
                        color: #b7b7b7;
                        &:hover {
                          color: #23527c;
                        }
                      }
                      &.fa-comments-o {
                        color: #b7b7b7;
                        margin-left: 20px;
                        &:hover {
                          color: #23527c;
                        }
                      }
                    }
                  }
                }
                .upload {

                  td.td-container {
                    padding: 6px 12px 30px;
                  }
                }
              }
            }
          }
          td {
            vertical-align: middle;
						.sub-table {
							width: 100%;
							table-layout: fixed;

							td {
								padding: 0.5% 1.25%;
							}
							.select-upload {
								float: left;
							}
              .btn-group {
                width: 100%;
                .button {
                  overflow: hidden;
                  width:74%;
                  position:relative;
                }
                input[type=submit] {
                  width: 25%;
                  &:hover {
                    background-color: $primary-blue;
                    border: none;
                    color: #fff;
                    padding:2px;
                  }
                }
              }
							.doc-upload-file {
							  font-size: 10px;
								padding: 0;
								width:170px;
                top: 0;
                width: 100%;
                height: 100%;
                position: absolute;
                opacity: 0;
							}
							.selectric {
								border-radius: 5px;
								max-width: 140px;
								width: 140px;
							}
						}
            &.table-functions {
              .fa-trash-o {
                margin-top: 4px;
              }
              padding-right: 6px !important;
              .btn {
                margin-right: 5px;
              }
							a {
								&:hover {
								}
								span {
									text-align: center !important;
									float: none !important;
									white-space: nowrap;

									&.function-text {
										font-size: 12px;
										color: #b7b7b7;
										&:hover {
											color: #007bc4;
											* {
												color: #007bc4;
											}
										}
									}
								}
							}
              .fa {
                cursor: pointer;
                display: inline-block;
                color: #b7b7b7;
              }
            }
          }
          &:hover {
            td {
              &.table-functions {
                .fa {
                  &:hover {
                    color: #23527c;
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
