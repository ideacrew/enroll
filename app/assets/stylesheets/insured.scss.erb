@import "variables";
.module {
  &.broker {
    .panel-heading {
      background-image: none;
      background-color: $primary-white;
      h3 {
        color: $primary-green;
        font-weight: $primary-bold;
        text-transform: uppercase;
        font-size: 18px;
      }
    }
    .panel-footer {
      background-color: $primary-white;
    }
  }
  &.consumer-broker-widget, &.employee-broker-widget, &.employer-broker-widget {
    .panel-heading {
      background-image: none;
      background-color: transparent;
      .panel-title {
        color: $primary-blue;
      }
    }
    .panel-body {
      display: table;
      width: 100%;
      .fa {
        color: $primary-blue;
      }
      > * {
        display: table-cell;
        vertical-align: middle;
        &.text-center {
          width: 25%;
        }
        &.text-left {
          padding-left: 7.5%;
        }
      }
      small {
        text-transform: uppercase;
        font-size: 11px;
        margin-top: 10%;
        a {
          color: $primary-gray;
        }
      }
    }
  }
  &.past-enrollments {
    th, td {
      vertical-align: middle;
    }
  }
  &.hbx-enrollment-panel {
    .panel-heading {
      background-color: transparent;
      background-image: none;
      h3 {
        color: $primary-green;
        font-weight: $primary-bold;
        text-transform: uppercase;
        font-size: 18px;
      }
    }
    .panel-body {
      padding-bottom: 15px;
      .vertically-aligned-row:first-of-type {
        margin-bottom: 2.5%;
        table-layout: auto;
        vertical-align: middle;
        div {
          img {
          }
        }
        h3 {
          width: 77.5%;
          line-height: 1.2;
        }
      }
      .vertically-aligned-row {
        table-layout: fixed;
        vertical-align: top;
      }
      .table {
        margin-bottom: 0;
      }
    }
    .panel-footer {
      padding-top: 0;
      background-color: transparent;
      border-top: 0;
      > .vertically-aligned-row {
        table-layout: fixed;
      }
    }
  }
  &.inbox {
    .fa {
      color: $primary-blue;
    }
  }
  &#qle-details {
    .error-info {
      margin-top: 0;
    }
  }
  &.shop-for-plans-widget {
    a {
      width: 100%;
      margin-bottom: 2.5%;
      &.btn {
        padding: 6px 0;
      }
    }
  }
}
.help-signup {
  h4 {
    color: $primary-blue;
    margin-bottom: 0;
    font-weight: 600;
    &+small {
      display: inline-block;
      padding: 3px 0 10px;
    }
  }
}
#profile-content #address_info .mailing-div {
 display: block;
 &>.col-lg-3>* {
   display: none;
 }
}
.carrier-contact {
  padding-bottom: 20px;
  h4.modal-title {
    text-align: center;
  }
  i {
    text-align: center;
    color: $primary-blue;
    display: block;
  }
  .fa-phone {
    font-size: 42px;
    padding-bottom: 10px;
  }
  .carrier-numbers {
    text-align: center;

  }
}

.fa-icon-link {
  padding-top: 4.45%;
}
.fa-icon-link, .fa-icon-label, a {
  color: $primary-blue;
  cursor: pointer;
  &:hover {
    color: #23527c;
  }
}
.fa-icon-label {
  cursor: pointer;
  color: #595959;
  font-size: 12px;
}

  .benefits-tab, .home-tab, .hbx-enrollment-panel {
    .fa {
      color: $primary-blue;
      margin: 0 10px 0 5px;
      &.published, &.enrolling {
        color: #FFD700;
      }
    }
    .bg-title {
      margin-bottom: 10px;
      display: inline-block;
      color: #69A30D;
      font-size: 18px;
    }
  }
  .hbx-enrollment-panel {
    table {
      tr {
        td {
          vertical-align: top;
          .enrollment-created-at {
            white-space: nowrap;
          }
        }
      }
    }
    .alert {
      padding: 15px 40px 15px 15px;
    }
        .bg-title {
          font-weight: bold;
        }
        .panel-body {
          h4 {
            margin-top: 5px;
            font-weight: 400;
            font-size: 18px;
          }
          .info p {
            margin: 0;
          }
        }
        &.waived-coverage {
          .status {
            color: $primary-gray;
          }
          table {
            width: 100%;
          }
        }
  }

.compare-table {
  tr {
    td:first-of-type, th:first-of-type {
      background-color: #E8E8E8;
      border: none;
      text-align: left;
