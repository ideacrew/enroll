$primary-color: #007bc4;
$primay-active-button-text-color: #ffffff;
$primary-bold: 600;

.module {
	&.update-browser-warning {
			color: #000;
			position: relative;
			width: 50%;
			top: 15%;
			border: solid 1px #b7b7b7;
			background-color: rgba(256,256,256,1);
			margin: auto;
			text-align: center;
			padding-bottom: 50px;
			.starter {
				margin: auto;
				padding: 15px 20px 20px;
			}
			.bg-grey {
				padding: 10px;
			}
			.browser-icon {
				height: 64px;
				width: 64px;
				margin: 0 auto 7px;
				text-align: center;
				background: url('<%= asset_path("images/broswericons_128.png") %>');
				&.chrome {
					background-position: left top;
				}
				&.safari {
					background-position: right top;
				}
				&.firefox {
					background-position: left bottom;
				}
			}
	}
  &.market-selection {
    padding: 0 15% 5%;
    .btn-primary {
      padding: 4%;
      font-size: auto;
      font-size: 13px;
      background-color: transparent;
      border: solid 1px #ccc;
      border-radius: 3px;
      text-transform: capitalize;
      &.active {
        background-color: $primary-color;
        a {
          color: $primay-active-button-text-color;
        }
      }
    }
  }
  &.ivl-documents-table {
    margin-top: 1.25%;
    .table {
      width: 100%;
      .thead-default {
        tr {
          background-color: #fff;
          th {
            text-align: center;
            vertical-align: middle;
          }
        }
      }
      tbody {
        tr {
          &.top {
            &.even {
              background-color: #ffffff !important;
              &:hover {
                background-color: #f5f5f5 !important;
              }
            }
          }
          &.dn {
            &:hover {
              background-color: transparent;
            }
            td.td-container {
              padding: 0px 12px;
              .table-responsive {
                overflow: visible;
              }
            }
            table {
              &.table {
                background-color: #fff;
                margin: 0 0 12px;
                tr {
                  &.bt-n {
                    td {
                      border-top: none !important;
                    }
                  }
                  &.bb {
                    td {
                      border-bottom: 1px solid #ddd;
                    }
                  }
                  td {
                    padding: 10px 12px;
                    .fa {
                      &.fa-download {
                        color: #b7b7b7;
                        &:hover {
                          color: #23527c;
                        }
                      }
                    }
                  }
                }
                .upload {

                  td.td-container {
                    padding: 6px 12px 30px;
                  }
                }
              }
            }
          }
          td {
            vertical-align: middle;
            &.table-functions {
              text-align: right;
              .fa {
                cursor: pointer;
                display: inline-block;
                color: #b7b7b7;
                margin-left: 5px;
              }
            }
          }
          &:hover {
            td {
              &.table-functions {
                .fa {
                  &:hover {
                    color: #23527c;
                  }
                }
              }
            }
          }
        }
      }
    }
  }

  &.demo-up {
    border: 0 !important;
    -webkit-appearance: none;
    -moz-appearance: none;
    width: 150px;
    text-overflow: "";
    border-radius: 15px;
    padding: 0px;
    margin: 0px;
  }
}
.doc-upload-file{
  font-size: 10px;
}



