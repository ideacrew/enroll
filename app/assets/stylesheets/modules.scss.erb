@import "variables";
.module {
  &.inbox {
    .inboxes {
      margin-bottom: 1.25%;
    }
    .table {
      td {
        vertical-align: middle;
      }
      tr.msg-inbox-unread {
        cursor: pointer;
      }
      tr.msg-inbox-unread > td {
        font-weight: bold;
      }
      tr.msg-inbox-read {
        cursor: pointer;
      }
    }
  }
  &.registration-rules {
    font-size: 11px;
  }
  &.footer {
    font-size: 14px;
    color: $primary-white;
    background-color: $primary-color;
    padding: 15px;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    a {
      color: $primary-white;
    }
    &>.container {
      display: table;
      .col-md-6 {
        display: table-cell;
        float: none;
        vertical-align: middle;
      }
      .col-md-6:last-of-type {
        a, span {
          display: inline-block;
        }
        ul {
          margin: 0;
        }
      }
    }
  }
  &.employer-invoices {
    max-width: 660px;
    thead th {
      height: 34px;
    }
    tbody {
      height: 220px;
      overflow-y: auto;
      tr {
        a {
          color: $primary-black;
          &:hover {
            text-decoration: none;
          }
        }
        &:hover {
          .fa {
            color: $brand-primary;
          }
        }
        .fa {
          color: $primary-gray;
        }
      }
    }
    thead {
        /* fallback */
    }
    tbody td, thead th {
      width: 50%;
      float: left;
    }
    table {
      width: 100%;
    }
    thead, tbody, tr { display: block; }
    tr {
      width: 100%;
    }
    tr:after {
      content: ' ';
      display: block;
      visibility: hidden;
      clear: both;
    }
    .sorter {
      a {
        color: $primary-black;

      }
      &:hover {
        .fa-stack-1x {
          color: $brand-primary;
        }
      }
      .fa {
        color: $primary-gray;
      }
      .fa-stack {
        position: relative;
        display: inline-block;
        width: 1em;
        height: 1em;
        line-height: 1em;
        vertical-align: middle;
        font-size: 1.15em;
      }
      .fa-stack-1x:first-of-type {
        margin-top: -6px;
      }
      .fa-stack-1x:last-of-type {
        padding-top: 3px;
      }
    }
  }
  &.update-browser-warning {
    color: #000;
    position: relative;
    width: 50%;
    top: 15%;
    border: solid 1px #b7b7b7;
    background-color: rgba(256,256,256,1);
    margin: auto;
    text-align: center;
    padding-bottom: 50px;
    .starter {
      margin: auto;
      padding: 15px 20px 20px;
    }
    .bg-grey {
      padding: 10px;
    }
    .browser-icon {
      height: 64px;
      width: 64px;
      margin: 0 auto 7px;
      text-align: center;
      background: url('<%= asset_path("images/broswericons_128.png") %>');
      &.chrome {
        background-position: left top;
      }
      &.safari {
        background-position: right top;
      }
      &.firefox {
        background-position: left bottom;
      }
    }
  }
  &.employer-welcome {
    .left-icon-section {
      margin-bottom: 2.5%;
      a {
        cursor: pointer;
        &:hover {
          text-decoration: underline;
        }
        .fa {
          color: $brand-primary;
        }
      }
      &.important {
        margin-top: 7.5%;
        .pdf-image {
          img {
            max-height: 80px;
          }
        }
      }
      h4 {
        margin-top: 0;
      }
      .x-right.dn {
        margin-bottom: 5%;
      }
      .icon-left-download {
        padding: 10px 0;
      }
    }
    .close-right {
      .x {
        img {
          cursor: pointer;
        }
      }
    }
  }
  &.market-selection {
    padding: 0 15% 5%;


    .btn-group .btn-primary {
      padding: 4%;
      font-size: 13px;
      background-color: transparent;
      border: solid 1px #ccc;
      border-radius: 3px;
      text-transform: capitalize;
      &.active {
        background-color: $primary-blue;
        a {
          color: $primay-active-button-text-color;
        }
      }
    }

  }
  &.modal-footer {
    .modal-sbc-link {
      text-align: left;
      position: relative;
      .fa.fa-file-pdf-o {
        margin: 2px auto auto 5px;
      }
      .sbc-text {
        font-size: 14px;
        margin-left: 10px;
        position: absolute;
        white-space: nowrap;
        top: 10px;
      }
    }
  }
  &.my-account-widget {
    &.panel {
      border-radius: 0;
      background-image: none;
      border-bottom: none;
      padding: 0 20px;
      font-size: 14px;
      margin: 0;
      padding: 0 10px;
      .panel-heading {
        background-color: #ffffff;
        background-image: none;
        border-bottom: none;
        padding: 0;
        font-size: 12px;
        text-align: center;
        h4 {
          font-weight: 600;
          font-size: 14px;
          margin-bottom: 0;
          max-width: 155px;
        }
      }
      .panel-body {
        font-size: 14px;
        text-align: center;
      }
    }
  }
	&.census-employees-table {
		margin-top: 1.25%;
		.table {
			.thead-default {
				tr {
					background-color: #fff;
					th {
						text-align: center;
						vertical-align: middle;
					}
				}
			}
			tbody {
				tr {
					&.top {
						&.even {
							background-color: #fff;
							&:hover {
								background-color: #f5f5f5;
							}
						}
					}
					td {
						vertical-align: middle;
						&.table-functions {
							min-width: 70px;
							.fa {
								cursor: pointer;
								display: inline-block;
								color: #b7b7b7;
								margin-left: 5px;
							}
						}
					}
					&:hover {
						td {
							&.table-functions {
								.fa {
									&:hover {
										color: #23527c;
									}
								}
							}
						}
					}
				}
			}
		}
	}
	&.shopping-data {
		.dependent-text {
			font-weight: 600;
			text-transform: capitalize;
		}
	}
 
 // ***** Consumer Documents Verification ******** //

  &.verification-process {
    .family-member, .person {
      padding: 0;
      margin-bottom: 15px;
      background-color: $primary-white;
      color: var(--form-element-text-color);
      .person {
        padding: 5px 0;
        font-weight: bold;
        border-bottom: $new-style-gray-border;
        padding-left: 30px;
      }
      .selectric {
        border: $new-style-gray-border;
        width: 200px;
        height: 30px;
        span {
          font-size:0.9em;
          margin-top: -7px;
          
        }
        .button {
          margin-top: -7px;
        }
      }
    }
    .btn-default {
      background-color: #ffffff;
      width: 195px;
      padding: 4px;
      margin-top: 0;
      overflow: hidden;
    }
    .btn-default:hover {
      text-decoration: underline;
    }
    .lb-md {
      font-size: 0.9em;
      vertical-align: middle;
    }
    .label {
      min-width: 100px !important;
      display: inline-block !important;
    }
    .verification-update-reason, .return-for-def-reason, .fedhub-request, .extend-request, .view-history {
      margin-top: 10px;
      padding-bottom: 10px;
      display: none;
      .modal-body {
        overflow-x: auto;
      }
    }
    .verification-document {
      border: $new-style-gray-border;
    }
    .v-doc-list {
      border-top: $new-style-gray-border;
      margin: 20px 0;
      padding: 5px;
      background-color: $primary-white;
      .v-doc-elem {
        margin: 5px;
      }
    }

    .ridp-doc-list {
      border-bottom: $new-style-gray-border;
      padding: 5px;
      background-color: $primary-white;
      margin-bottom: 25px;
      .ridp-doc-elem {
        margin: 5px;
      }
    }
    
    .family-member {
      border: $new-style-gray-border;
    }
    .v-type {
      margin-bottom: 10px;
    }
    .verification-types {
      border: none;
      margin-bottom: 10px;
    }
  }
  // --- end of consumer verification --- //
}

