.note {
  position: relative;
  padding: 1em 1.5em;
  border:1px solid orange;
  padding:10px;
  background: white;
  margin-bottom: 10px;
}

.note:before {
  content: "";
  position: absolute;
  top: -2px;
  right: -2px;
  border-width: 0px 30px 30px 0;
  border-style: solid;
  border-color: #f2f2f2 #f2f2f2 orange orange;
  background: #f2f2f2;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  /* Firefox 3.0 damage limitation */
  display: block; width: 0;
}

.note.rounded {
  -moz-border-radius: 5px 0 5px 5px;
  border-radius: 5px 0 5px 5px;
}

.note.rounded:before {
  border-width: 8px;
  border-color: #fff #fff transparent transparent;
  -moz-border-radius: 0 0 0 5px;
  border-radius: 0 0 0 5px;
}

