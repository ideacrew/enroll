<div class="row">
  <div class="col-md-9 col-sm-9 col-xs-12">
    <%= f.hidden_field :employee_role_id %>

  	<%= render "shared/error_messages", object: f.object %>
  	<%= render 'shared/person_search_fields', f: f %>
  	
  	<%= render 'people/no_results' %>

   <div id="employer-info" class="row hidden"></div>

    <%= render 'shared/address_fields', f: f %><br>
    <%= render 'shared/phone_fields', f: f %><br>
    <%= render 'people/employer_search' %>
  </div>

  <div class="col-md-3 col-sm-3 col-xs-12 key no-pd-right hidden" id="key-section">
    <%= render 'shared/signup_progress' %>

    <div class="row ">
      <div class="col-md-12 <%= pundit_class Family, :updateable?%>">
        <%= link_to '<i class="fa fa-chevron-left"></i> Back'.html_safe, '#', class: 'btn btn-primary disabled' %> &nbsp;
        <button type="submit" class="btn btn-primary" id="continue-employer">
          <i class="fa fa-user-plus"></i> Continue
        </button>
      </div>
    </div><br>
    <div class="row">
      <div class="col-md-12 <%=pundit_class Family,:updateable?%>">
        <%= link_to '<i class="fa fa-user"></i> My Account'.html_safe, family_account_path, class: 'btn btn-primary' %> &nbsp;
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-floppy-o"></i> Save & Exit
        </button>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-sm-9 col-xs-12">
    <div id="email_info" class="focus_effect personal-info-row">
      <%= f.fields_for :emails, errors: {}, fieldset: true do |email|  %>
        <%= render 'shared/email_fields', f: email %>
      <% end %>
    </div>
  </div> 
</div>