@import "variables";
.module {
  &.hbx-panel {
    &.employer-my-plan-year {
      table {
        width: 100%;
        tr {
          width: 100%;
          &:last-of-type {
            td {
              &:last-of-type {
                h3 {
                  color: #69a30d;
                  font-weight: bold;
                  font-size: 14px;
                }
              }
            }
          }
          td {
              header {
                text-transform: uppercase;
                color: #9b9b9b;
                font-size: 12px;
              }
            &:last-of-type {
              h3 {
                font-size: 22px;
                color: #9b9b9b;
                font-weight: semibold;
              }
            }
            * {
              margin: 0;
              padding: 0;
            }
          }
        }
      }
    }
    &.employer-benefit-groups {
      .health {
        padding-top: 3.75%;
      }
      table.benefit-group-contribution-table {
        padding: 0 2%;
        margin: auto;
        table-layout: fixed;

        tr.not-offered {
          opacity: 0.35;
        }

        tr:first-of-type {
          border-top: none;
          th:first-of-type {
            width: 28%;
          }
          th {
            font-weight: normal;
            text-transform: uppercase;
            padding: 10px 0;
            color: #9b9b9b;
          }

        }
        tr {
          border-bottom: solid 1px #d5d5d5;

          td {
            padding: 15px 0;
            font-size: 16px;
            i {
              margin-left: -17%;
              color: #69A30D;
              margin-right: 10px;
              cursor: default;
            }
          }
          &:last-of-type {
            border-bottom: none;
            display: none;
          }
        }
      }
      table {
        width: 100%;
        margin-top: 10px;
        &.benefit-group {
          table-layout: fixed;
        }
        td {
          vertical-align: top;
          padding-right: 2.5%;
          padding-bottom: 1.25%;
        }
        tr {
          width: 100%;
          &:last-of-type {
            td {
              &:last-of-type {
                h3 {
                  color: #69a30d;
                  font-weight: bold;
                  font-size: 14px;
                }
              }
            }
          }
          td, th {
              header {
                font-weight: normal;
                text-transform: uppercase;
                color: #9b9b9b;
                font-size: 12px;
              }
            &:last-of-type {
              h3 {
                font-size: 22px;
                color: #9b9b9b;
                font-weight: semibold;
              }
            }
            * {
              margin: 0;
              padding: 0;
            }
          }
        }
      }
    }
  }
}
.census-employee-add {
  .module {
    &.census-employee-dependents {
      .panel-body {
        padding: 0;
        .row-form-wrapper:first-of-type {
          border-top: 0;
        }
        .row-form-wrapper:last-of-type {
          border-bottom: 0;
        }
        * {
          border-left: 0;
          border-right: 0;
        }
      }
    }
    &.census-employee-fields {
      .row-form-wrapper:first-of-type {
        border-top: 0;
      }
    }
  }
}
.census-employee {
  .injected-edit-status {
    display: none;
  }
  .vertically-aligned-row:first-of-type {
    .vertically-aligned-row {
      h4, h5 {
        display: inline;
      }
    }
  }
  .census-employee-aasm {
    font-size: 100%;
    .fa {
      cursor: pointer;
    }
  }
  .module {
    .panel-body {
      border: 0;
      .row-form-wrapper {
        border-left: 0;
        border-right: 0;
      }
      .row-form-wrapper:last-of-type {
      }
      .row-form-wrapper:first-of-type, #email_info {
        border-top: 0;
      }
    }
    &.census-employee-details {
      .panel-body {
        padding: 0;
      }
      .panel-heading {
        background-image: none;
        background-color: transparent;
        .panel-title {
          color: $brand-primary;
        }
      }
    }
    &.census-employee-fields {
      .panel-body {
        padding: 0;
      }
      .row-form-wrapper {
        border-bottom: 0;
      }
    }
    &.census-employee-address {
      .panel-body {
        padding: 0;
      }
      .address {
        .row-form-wrapper:first-of-type {
          display: none;
        }
        .row-form-wrapper:last-of-type {
          border-bottom: none;
        }
      }
    }
    &.census-employee-email {
      .panel-body {
        padding: 0;
      }
      .row-form-wrapper:last-of-type {
        border-bottom: none;
      }
    }
    &.census-employee-dependents {
      .panel-body {
        padding: 0;
      }
      .row-form-wrapper:last-of-type {
        border-bottom: none;
      }
    }
    &.hbx-enrollment-panel {
      .panel-body {
        padding-bottom: 15px;
      }
      .panel-footer {
        padding-bottom: 15px;
        a {
          padding: 3%;
        }
      }
    }
  }
  .form-inputs {
    display: block;

    .btn-default.return_to_employee_roster {
      display: none;
    }
    span {
      clear: both;
    }
  }
}
.module {
  &.change-employee-status  {
    .form-control, h4 {
      display: inline-block;
    }
    .form-control {
      width: 50%;
      margin-left: 2.5%;
    }
  }
  &.broker {
    .panel-body, .panel-footer {
      .fa {
        color: $brand-primary;
      }
      .vertically-aligned-row {
        table-layout: fixed;
        > * {
          vertical-align: top;
        }
      }
    }
  }
  &.home-tab {
    .plan-details {
      border-top: none !important;
      padding-bottom: 15px;
      padding-left: 0;
      padding-right: 0;
    }
    .benefit-packages {
      .panel:first-of-type {
        border-bottom: none !important;
        padding: 15px;
        .col-xs-6 .title {
          font-size: 18px;
        }
      }
    }
    .fa {
      margin: 0;
    }

    .title {
      text-transform: uppercase;
      color: $primary-orange;
      font-weight: bold;
      span {
        color: #333;
        font-weight: normal;
      }
    }
    .description {
      text-transform: none;
      font-weight: normal;
      margin-bottom: 15px;
    }
    .health {
      padding-top: 10px;
    }
    .dental {
      padding-top: 15px;
    }
    .plan-year {
      padding-bottom: 15px;
    }
  }
  &#plan_year {
    .fa {
      color: $brand-primary;
    }
  }
  &.plan-year {
    .fa {
     &.enrolling {
       padding-bottom: 20px;
     }
    }
    .btn {
      .fa {
        margin: 0;
      }
    }
    .above {
      z-index: 100;
      .btn {
        margin: 0 0px 10px 10px;
      }
    }
    .below {
      z-index: 100;
      .btn {
        margin: 0 10px 25px 0;
      }
    }
    .benefit-group {
      .benefit-package {
        margin-bottom: 15px;
        .col-xs-2 {
          button {
            margin-top: 12px;
          }
        }

        .benefitgroup:first-of-type {
          padding-bottom: 0;
        }
        .benefitgroup:last-of-type {
          padding-top: 0;
          padding-bottom: 35px;
        }
        .panel {
          padding: 15px 15px;
        }
      }
      .title {
        text-transform: uppercase;
        color: $primary-orange;
        font-weight: bold;
        span {
          color: #333;
          font-weight: normal;
        }
      }
      .description {
        text-transform: none;
        font-weight: normal;
        margin-bottom: 15px;
      }
      .health {
        padding-top: 10px;
        .fa {
          margin: 0;
        }
      }
      .dental {
        padding-top: 15px;
        .fa {
          margin: 0;
        }
      }
    }
  }
  &.controls {
    .above {
      z-index: 100;
      .btn {
        margin: 0 0px 10px 10px;
      }
    }
    .below {
      z-index: 100;
      .btn {
        margin: 0 10px 25px 0;
      }
    }
  }
  &.benefit-properties {
    .description {
      border-bottom: none;
    }
  }
  &.employer-broker-widget {
    .panel-heading {
      .panel-title {
        color: $brand-primary;
      }
    }
    .panel-body {
      display: table;
      width: 100%;
      > * {
        display: table-cell;
        vertical-align: middle;
        &.text-center {
          width: 25%;
        }
        &.text-left {
          padding-left: 7.5%;
          .broker-information {
            word-break: break-all;
          }
        }
      }
    }
  }
  &.open-enrollment-ends-on {
    .panel-body {
      display: table;
      width: 100%;
      > * {
        display: table-cell;
        vertical-align: middle;
        &.text-center {
          width: 25%;
          figure span {
            display: inline-block;
          }
          h2, span {
            color: $primary-orange;
            line-height: 1.1;
          }
          h2 {
            strong {
              margin-top: 27.5%;
              display: inline-block;
            }
          }
        }
        &.text-left {
          padding-left: 7.5%;
          h3 {
            line-height: 1.1;
            margin-bottom: 2.5%;
            color: $primary-orange;
          }
        }
      }
    }
  }
  .employer-right-column {
    padding-right: 0;
  }
  &#cobra_info {
    .checkbox {
      margin-left: 25px;
    }
  }
  &#cobra_info {
    #cobra_begin_date_field {
      .cobra-label label {
        margin: 10px;
      }
    }
  }
  #cobra_bar {
    float: left;
    .title {
      text-align: left;
    }
  }
  .table-functions {
    .btn.disabled, .btn[disabled] {
      background-color: gray;
      border-color: gray;
    }
  }
}

form.new_organization, form.edit_organization {
  span.fa.fa-question {
    font-size: 24px;
  }
  .chosen-container.chosen-container-single .chosen-single {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 12px;
    line-height: 1.428571429;
    color: #444;
    vertical-align: middle;
    background-color: #FFF;
    border: 0px;
    border-radius: 0;
    /*Changed from 4px*/
    -webkit-box-shadow: none;
    box-shadow: none;
    -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    background-image: none;
  }
  .chosen-container.chosen-container-single .chosen-single div {
    top: 4px;
    color: #000;
  }
  .chosen-container .chosen-drop {
    background-color: #f5f5f5;
    border: 1px solid #CCC;
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 0;
    width: 300px;
    /*Changed from 4px*/
    -webkit-box-shadow: none;
    box-shadow: none;
    background-clip: padding-box;
    margin: 2px 0 0;
  }
  .chosen-container .chosen-search input[type=text] {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.428571429;
    color: #666;
    vertical-align: middle;
    background-color: #f5f5f5;
    border: 1px solid #CCC;
    border-radius: 0;
    /*Changed from 4px*/
    -webkit-box-shadow: none;
    box-shadow: none;
    background-image: none;
  }
  .chosen-container .chosen-results {
    margin: 2px 0 0;
    padding: 5px 0;
    font-size: 12px;
    list-style: none;
    background-color: #f5f5f5;
    margin-bottom: 5px;
  }
  .chosen-container .chosen-results li.group-result {
    font-weight: bold;
  }
  .chosen-container .chosen-results li,
  .chosen-container .chosen-results li.active-result {
    display: block;
    padding: 3px 20px;
    clear: both;
    font-weight: normal;
    line-height: 1.428571429;
    color: #666;
    white-space: normal;
    background-image: none;
  }
  .chosen-container .chosen-results li:hover,
  .chosen-container .chosen-results li.active-result:hover,
  .chosen-container .chosen-results li.highlighted {
    color: #444;
    text-decoration: none;
    background-color: #F0F0F0;
    background-image: none;
  }

  .chosen-container.chosen-container-single.chosen-container-active .chosen-single,
  .chosen-container .chosen-search input[type=text]:focus {
    border-color: #66AFE9;
    outline: 0;
    -webkit-box-shadow: none;
    box-shadow: none;
  }
  #sic_search {
    width: 80%;
  }

  #sicHelperContent {
    .header {
      padding: 3%;
      h4 {
        margin-bottom: 2%;
      }
    }

    #sictree {
      height: 400px;
      ul.list-group {
        max-height: 400px;
        overflow-y: scroll;
        border-radius: 0px;
        box-shadow: none;
        -webkit-box-shadow: none;
      }
      ul li.list-group-item {
        border: 0px;
      }
    }
  }
}
