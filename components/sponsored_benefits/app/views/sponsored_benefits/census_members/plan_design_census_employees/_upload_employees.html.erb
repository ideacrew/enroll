<div class="employee-upload">
  <i class="fa fa-times fa-3x pull-right modal-close"></i>
  <h2>Upload Employee Roster</h2>
  <h4>If you completed your employee roster offline using our Microsoft Excel template, find the file on your computer and upload it here.</h4>
  <h4><%= sanitize link_to(l10n("documents.need_employee_template"), main_app.document_employees_template_download_path(content_type: 'application/vnd.ms-excel', filename: "DCHL Employee Census.xlsx"), class: "download") %></h4 >
  <div class="upload-preview">

  </div>
<%= form_for @plan_design_proposal, url: bulk_employee_upload_plan_design_proposal_plan_design_census_employees_path(@plan_design_proposal), method: 'post', :html => { :multipart => true } do |f| %>
<%= file_field_tag :file, accept: (FileUploadValidator::CSV_TYPES + FileUploadValidator::XLS_TYPES).join(',') %>
<%#=pundit_span EmployerProfile, :updateable? %>
<%= label_tag :file, 'Select File To Upload', class: 'select btn btn-primary ' %>
<%= f.submit 'Upload', class: 'btn btn-primary ' %>
<% end %>
</div>
