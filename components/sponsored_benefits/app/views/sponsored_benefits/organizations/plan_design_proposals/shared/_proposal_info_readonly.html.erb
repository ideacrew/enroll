<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Quote for <%= @plan_design_proposal.plan_design_organization.legal_name %> <%= link_to "View all quotes for this employer", organizations_plan_design_organization_plan_design_proposals_path(@plan_design_proposal.plan_design_organization._id, profile_id: params[:profile_id]), remote: true, class: "pull-right" %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="row no-buffer row-form-wrapper">
      <div class="col-md-4 col-md-4 col-xs-12 form-group form-group-lg no-pd">
        <h4>Quote Name</h4>
        <%= @plan_design_proposal.title %>
      </div>

      <div class="col-md-4 col-md-4 col-xs-12 form-group form-group-lg no-pd">
        <h4>Effective Date</h4>
        <%= @plan_design_proposal.effective_date.strftime("%m/%d/%Y") %>
      </div>

      <div class="col-md-4 col-md-4 col-xs-12 form-group form-group-lg no-pd">
        <h4>Quote Date</h4>
        <%= @plan_design_proposal.updated_at.strftime("%m/%d/%Y") %>
      </div>

      <br />

      <% if EnrollRegistry.feature_enabled?(:sic_codes) %>

        <div class="col-md-4 col-md-4 col-xs-12 form-group form-group-lg no-pd">
          <h4>SIC Code</h4>
          <%= @plan_design_organization.sic_code %>
        </div>

        <div class="col-md-4 col-md-4 col-xs-12 form-group form-group-lg no-pd">
          <h4>Zip Code</h4>
          <%= @plan_design_organization.office_locations.first.address.zip %>
        </div>

        <div class="col-md-4 col-md-4 col-xs-12 form-group form-group-lg no-pd">
          <h4>County</h4>
          <%= @plan_design_organization.office_locations.first.address.county %>
        </div>
      <% end %>
    </div>    
  </div>
</div>