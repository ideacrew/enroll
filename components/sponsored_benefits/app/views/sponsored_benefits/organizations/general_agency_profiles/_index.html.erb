<%= form_tag sponsored_benefits.assign_organizations_general_agency_profiles_path(ids: [@form.plan_design_organization_id]), method: :post do %>
  <%= hidden_field_tag "broker_agency_profile_id", @form.broker_agency_profile_id %>
  <div class="row">
    <div class="col col-sm-2 mt-1">
      <label><strong> Select General Agency: </strong></label>
    </div>
    <div class="col col-sm-4 mt-1">
      <%= select_tag "general_agency_profile_id", options_for_select(@form.service.agencies.collect {|agency| [agency.legal_name, agency.id] if ["is_approved"].include?(agency.aasm_state)}.compact), prompt: "Select General Agency", required: true %>
    </div>
    <div class="col col-sm-6">
      <%= submit_tag "Submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
