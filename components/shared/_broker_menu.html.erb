<div class="mainmenu">
  <div class="container">
    <ul role="tablist" class="list-unstyled list-inline" id="myTab">
      <li role="presentation" id="home-tab" <%= menu_tab_class(active_tab, "home-tab") %>>
        <%= link_to(main_app.broker_agencies_profile_path(@broker_agency_profile), "aria-expanded" => "true", "aria-controls" => "home", "role" => "tab" ) do  %>
        <span class="hidden-xs">Home</span>
        <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
        <% end %>
      </li>
      <li role="presentation" id="employers-tab" <%= menu_tab_class(active_tab, "employers-tab") %>>
        <%= link_to(main_app.employers_broker_agencies_profiles_path(id: @broker_agency_profile.id), "aria-expanded" => "true", :remote => true, "aria-controls" => "employers", "role" => "tab" ) do  %>
          <span class="hidden-xs">Employers</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Employers"></span>
        <% end %>
      </li>
      <li role="presentation" id="prospect-employers-tab" <%= menu_tab_class(active_tab, "prospect-employers-tab") %>>
        <%= link_to(sponsored_benefits.organizations_profile_employers_path(@broker_agency_profile), "aria-expanded" => "true", :remote => true, "aria-controls" => "employers", "role" => "tab" ) do  %>
          <span class="hidden-xs">Prospect Employers</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Prospect Employers"></span>
        <% end %>
      </li>
      <li role="presentation" id="families-tab" <%= menu_tab_class(active_tab, "families-tab") %>>
        <%= link_to(main_app.family_index_broker_agencies_profiles_path(id: @id), "aria-expanded" => "true", :remote => true, "aria-controls" => "families", "role" => "tab" ) do  %>
          <span class="hidden-xs">Families</span>
          <span class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg" title="Families"></span>
        <% end %>
      </li>
    </ul>
  </div>
</div>


