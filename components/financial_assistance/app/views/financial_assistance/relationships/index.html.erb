<% if @bs4 %>
  <div id="family-matrix">
    <%= render partial: 'form', locals: {form_remote: false, all_relationships: @all_relationships, missing_relationships: @missing_relationships, relationship_kinds: @relationship_kinds } %>
  </div>
<% else %>
  <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 row">
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 bottom-pd">
      <div id="family-matrix">
        <%= render partial: 'form', locals: {form_remote: false, all_relationships: @all_relationships, missing_relationships: @missing_relationships, relationship_kinds: @relationship_kinds } %>
      </div>
    </div>
    <div class='col-md-3'>
      <%= render partial: 'financial_assistance/shared/right_nav', locals: {
          previous_url: financial_assistance.edit_application_path(@application.id),
          next_url: financial_assistance.review_and_submit_application_path(@application.id)
      } %>
    </div>
  </div>
<% end %>
