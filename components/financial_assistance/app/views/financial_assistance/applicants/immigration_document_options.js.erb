<% when "immigration_i_327_fields_container" %>
  <% partial_target = "financial_assistance/applicants/i_327_fields" %>
<% when "immigration_i_766_fields_container" %>
  <% partial_target = "financial_assistance/applicants/i_766_fields" %>
<% when "immigration_i_571_fields_container" %>
