<% if @bs4 %>
  <div class="mt-4 mb-4">
    <%= label_tag :visa_number, l10n("insured.consumer_roles.docs_shared.visa_number"), class: "weight-n" %>
    <%= v.text_field :visa_number, :placeholder => l10n("insured.consumer_roles.docs_shared.visa_number"),
                    :pattern => "[a-zA-Z0-9]{8,12}",
                    :class => "doc_fields",
                    :title => l10n("insured.consumer_roles.docs_shared.visa_number_req").gsub("-li-", ""),
                    :id => "visa_number" %>
    <%= render :partial => "financial_assistance/applicants/docs_shared/vlp_doc_requirements", locals: {req: l10n("insured.consumer_roles.docs_shared.visa_number_req")} %>
  </div>
<% else %>
<div class="col-md-4 col-sm-4 col-xs-6 form-group form-group-lg no-pd">
  <%= v.text_field :visa_number, :placeholder => l10n("insured.consumer_roles.docs_shared.visa_number"),
                   :pattern => "[a-zA-Z0-9]{8,12}",
                   :class => "doc_fields",
                   :title => l10n("insured.consumer_roles.docs_shared.visa_number_req").gsub("-li-", "") %>
  <%= render :partial => "financial_assistance/applicants/docs_shared/vlp_doc_requirements", locals: {req: l10n("insured.consumer_roles.docs_shared.visa_number_req")} %>
</div>
<% end %>
