            <!-- End: Section for Magi Medicaid / Medicaid CHIP Applicants -->

            <!-- Start: Section for UQHP / Without Assistance Applicants -->
            <% uqhp_applicants = ed.uqhp_applicants %>
            <% if uqhp_applicants.present? %>
