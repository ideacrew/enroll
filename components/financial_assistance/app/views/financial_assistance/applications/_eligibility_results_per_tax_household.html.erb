                </ul>
              <% end %>
              <!-- End: Section for CSR 100 Applicants -->

              <!-- Start: Section for CSR limited Applicants -->
              <% csr_nal_applicants = ed.csr_limited_applicants %>
              <% if csr_nal_applicants.present? %>
