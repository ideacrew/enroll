<% if @bs4 %>
  <%= render partial: '/financial_assistance/shared/faa_progress_options', locals: {step: 1} %>
  <h1><%= l10n("faa.checklist.heading") %></h1>
  <p><%= l10n("faa.checklist.instructions1") %></p>
  <div class="my-4">
    <% content_for :submit_button do %>
      <%= h(link_to_with_noopener_noreferrer(l10n("faa.checklist.begin_application"), financial_assistance.edit_application_path(@application), class: 'button btn-continue', id: 'btn-continue')) %>
    <% end %>
    <%= render partial: 'financial_assistance/shared/progress_navigation_buttons', locals: {
        previous_link: application_checklist_previous_url(@application),
        next_link: financial_assistance.edit_application_path(@application)
      } %>
  </div>
  <p class="b"><%= l10n("faa.checklist.instructions2") %></p>
  <div class="d-flex sm-block my-4">
    <div class="mr-auto col-sm col-md-6 pl-0">
      <p class="b"><%= l10n("faa.checklist.needs_insurance_header") %></p>
      <ul class="spaced">
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet1") %></li>
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet2") %>
          <ul>
            <li><%= l10n("faa.checklist.require_bullet2_a") %></li>
            <li><%= l10n("faa.checklist.require_bullet2_b") %></li>
            <li><%= l10n("faa.checklist.require_bullet2_c") %></li>
          </ul>
        </li>
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet3") %>
          <ul>
            <li><%= l10n("faa.checklist.require_bullet3_a") %></li>
            <li><%= l10n("faa.checklist.require_bullet3_b") %></li>
            <li><%= l10n("faa.checklist.require_bullet3_c") %></li>
            <li><%= l10n("faa.checklist.require_bullet3_d") %></li>
          </ul>
        </li>
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet4") %></li>
        <li><%= l10n("faa.checklist.require_bullet5") %>
          <ul>
            <li><%= l10n("faa.checklist.require_bullet5_a") %></li>
            <li><%= l10n("faa.checklist.require_bullet5_b") %></li>
            <li><%= l10n("faa.checklist.require_bullet5_c") %></li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="col-sm col-md-6 pr-0">
      <p class="b"><%= l10n("faa.checklist.doesnt_need_insurance_header") %></p>
      <ul class="spaced">
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet1") %></li>
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet2") %>
          <ul>
            <li><%= l10n("faa.checklist.require_bullet2_a") %></li>
            <li><%= l10n("faa.checklist.require_bullet2_b") %></li>
            <li><%= l10n("faa.checklist.require_bullet2_c") %></li>
          </ul>
        </li>
        <li class="mb-4"><%= l10n("faa.checklist.require_bullet3") %>
          <ul>
            <li><%= l10n("faa.checklist.require_bullet3_a") %></li>
            <li><%= l10n("faa.checklist.require_bullet3_b") %></li>
            <li><%= l10n("faa.checklist.require_bullet3_c") %></li>
            <li><%= l10n("faa.checklist.require_bullet3_d") %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
  <% content_for :submit_button do %>
    <%= h(link_to_with_noopener_noreferrer(l10n("faa.checklist.begin_application"), financial_assistance.edit_application_path(@application), class: 'button btn-continue', id: 'btn-continue')) %>
  <% end %>
  <%= render partial: 'financial_assistance/shared/progress_navigation_buttons', locals: {
      previous_link: application_checklist_previous_url(@application),
      next_link: financial_assistance.edit_application_path(@application)
    } %>
<% else %>
<div class="container">
  <div id="new_person_wrapper">
    <div class="row">
      <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
        <%= render :partial => '/financial_assistance/shared/fa_left_nav' %>
      </div>
      <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 row">

        <input type='hidden' name='exit_after_method' value='false' id='exit_after_method'>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 bottom-pd">
          <h2 class="darkblue">Application Checklist</h2>
          <p>Before you get started, you may want to review the application checklist. When you're ready to begin, select CONTINUE.</p>
          <!-- <p class="memo">* = required field</p> -->
          <div class="knowmore rounded-top">
            <div class="row">
              <div class="col-lg-3 stacked-icons text-center">
                <i class="fa fa-arrow-down fa-3x adjustments" aria-hidden="true"></i>
                <br>
                <span class="fa-stack fa-4x">
                  <i class="fa fa-folder-o fa-stack-2x" aria-hidden="true"></i>
                  <i class="fa fa-info-circle fa-stack-1x adjustments" aria-hidden="true"></i>
                </span>
              </div>
              <div class="col-lg-9">
                <div>
                  <h4>For Each Person in Your Household:</h4>
                  <div>You will need detailed information on each person in your household (even if they don't need coverage) to complete the application. This includes details like date of birth, income, and other health insurance available. <br> <br>
                  If you gather the information in advance, you can complete the application quickly.<br> <br>
                  <i class="fa fa-file-pdf-o fa-2x" aria-hidden="true"></i>
                    <%= sanitize link_to l10n('faa.view_complete_checklist'), financial_assistance.checklist_pdf_applications_path(id: @application.id), target: "_blank", rel: 'noopener noreferrer' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
          <%= render partial: 'financial_assistance/shared/right_nav', locals: {
            previous_url: application_checklist_previous_url(@application),
            next_url: financial_assistance.edit_application_path(@application)
          } %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
