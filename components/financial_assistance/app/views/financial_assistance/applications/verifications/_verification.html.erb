<% application = fetch_latest_determined_application(family_id) %>
<% if application.present? %>
  <h1> Cost Savings Documents </h1>
  <div class="table table-sm">
    <div class="module verification-process col-md-12">
      <% applicants = application.applicants %>
      <% applicants.each do |applicant| %>
        <% next unless applicant.is_applying_coverage %>
        <div class="row">
          <div class="family-member col-md-12">
            <div class="person">
              <%= applicant.full_name %>
            </div>
            <div class="verification-types col-md-12">
              <% if applicant.income_evidence.present? && applicant.incomes.present? %>
                <%= render partial: "financial_assistance/applications/verifications/verification_card", locals: {applicant: applicant, application: application, evidence: applicant.income_evidence} %>
              <% end %>
              <% if applicant.non_esi_evidence.present? %>
                <%= render partial: "financial_assistance/applications/verifications/verification_card", locals: {applicant: applicant, application: application, evidence: applicant.non_esi_evidence} %>
              <% end %>
              <% if applicant.esi_evidence.present? %>
                <%= render partial: "financial_assistance/applications/verifications/verification_card", locals: {applicant: applicant, application: application, evidence: applicant.esi_evidence} %>
              <% end %>
              <% if applicant.aces_evidence.present? %>
                <%= render partial: "financial_assistance/applications/verifications/verification_card", locals: {applicant: applicant, application: application, evidence: applicant.aces_evidence} %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<script>
    $(document).ready(function() {
        Insured.custom_upload_init();
    });
</script>
