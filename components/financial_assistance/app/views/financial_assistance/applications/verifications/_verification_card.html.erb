<% applicant.evidences.all.each do |evidence| %>
  <% next if  evidence.key == :income && applicant.incomes.blank?   %>
  <% evidence_type = evidence.title %>
  <div class="row">
    <div class="v-type col-md-12">
      <div class="v-type-name col-md-2">
        <%= l10n(display_evidence_type(evidence_type)) %>
      </div>
      <div class="v-type-status col-md-2 text-center">
          <span class="label lb-md label-<%=verification_status_class(evidence.eligibility_status)%>">
            <%= show_verification_status(evidence.eligibility_status, current_user.has_hbx_staff_role?) %>
          </span>&nbsp;
      </div>

      <div class="v-type-due-date col-md-3">
        <% if FinancialAssistance::Evidence::DUE_DATE_STATES.include? evidence.eligibility_status %>
          <span class="text-danger"><%#= l10n('due_date') %></span>
          <%#= evidence.due_on %>
        <% end %>
      </div>

      <div class="v-type-upload col-md-3">
        <% if evidence.type_unverified? && applicant.is_applying_coverage %>
          <%= form_tag financial_assistance.application_applicant_verification_documents_upload_path(application, applicant), multipart: true, method: :post do %>
            <span class="btn btn-default btn-file">
              <i class="fa fa-upload" aria-hidden="true"></i>
              <%= l10n('upload_documents') %>
              <%= file_field_tag "file[]", type: :file, accept: 'image/png,image/gif,image/jpeg,application/pdf', class: "doc-upload-file",  :multiple => true, value: "Upload Documents" %>
            </span>
              <%= hidden_field_tag 'applicant_id', applicant.id  %>
              <%= hidden_field_tag 'evidence', evidence.id  %>
          <% end %>
        <% end %>
      </div>
      <% if current_user.has_hbx_staff_role? && evidence_type.present? %>
        <div class="v-type-actions col-md-2">
          <%= select_tag :verification_actions, admin_actions_on_faa_documents(evidence), {id: "v-action-#{applicant.id}-#{evidence_type.downcase.split.join('-')}", prompt: 'Action'} %>
        </div>
      <% end %>
    </div>
  </div>

  <% if current_user.has_hbx_staff_role? %>
    <%= render :partial => "financial_assistance/applications/verifications/admin_verification_actions", locals: { application: application, applicant: applicant, evidence: evidence, evidence_type: evidence_type} %>
  <% end %>

  <div class="row">
    <% if evidence.documents.any? %>

      <div class="v-doc-list col-md-12">
        <% evidence.documents.each do |document|%>
          <% key = document.identifier.split('#').last %>
          <div class="row" id="doc_table_row_<%=document.id%>">
            <div class="v-doc-elem col-md-12">
              <div class="v-doc col-md-11">
                <% if document.identifier.present? %>
                  <%= link_to "#{document.title.titleize} <i class='fa fa-download fa-lg' aria-hidden='true'></i>".html_safe, "/financial_assistance/applications/#{application.id}/applicants/#{applicant.id}/verification_documents/download/#{key}", :target => '_blank', title: "Download", data: {"toggle": "tooltip"} %>
                <% end %>
              </div>
              <div class="v-doc col-md-1">
                <span class="<%=pundit_class(Family, :updateable?)%>" >
                  <%= link_to financial_assistance.application_applicant_verification_documents_destroy_path(document, :applicant_id => applicant.id, :evidence => evidence.id, :doc_key => key, :doc_title => document.title.titleize), method: :delete do %>
                    <i class="far fa-trash-alt fa-lg role-trashcan pull-right" title="Delete"></i>
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

<% end %>