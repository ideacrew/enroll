<% applicant.evidences.all.each do |verif_type| %>
  <% v_type = verif_type.title %>
  <div class="row">
    <div class="v-type col-md-12">
      <div class="v-type-name col-md-2">
        <%= v_type %>
      </div>
      <div class="v-type-status col-md-2 text-center">
        <% if applicant.is_applying_coverage %>
            <span class="label lb-md label-<%=verification_status_class(verif_type.eligibility_status)%>">
              <%= show_verification_status(verif_type.eligibility_status, current_user.has_hbx_staff_role?) %>
            </span>&nbsp;
        <% end %>
      </div>

      <div class="v-type-due-date col-md-3">
        <% if FinancialAssistance::VerificationType::DUE_DATE_STATES.include? verif_type.eligibility_status %>
          <span class="text-danger"><%#= l10n('due_date') %></span>
          <%= verif_type.due_on %>
        <% end %>
      </div>

      <div class="v-type-upload col-md-3">
        <%# if verif_type.type_unverified? && applicant.is_applying_coverage %>
          <%#= form_tag financial_assistance.application_applicant_documents_upload_path(application, applicant), multipart: true, method: :post do %>
<!--                        <span class="btn btn-default btn-file">-->
<!--                          <i class="fa fa-upload" aria-hidden="true"></i>-->
                          <%#= l10n('upload_documents') %>
                          <%#= file_field_tag "file", type: :file, accept: 'image/png,image/gif,image/jpeg,application/pdf', class: "doc-upload-file",  :multiple => true, value: "Upload Documents" %>
<!--                        </span  >-->
            <%#= hidden_field_tag 'docs_owner', applicant.id  %>
            <%#= hidden_field_tag 'verification_type', verif_type.id  %>
          <%# end %>
        <%# end %>
      </div>
      <%# if current_user.has_hbx_staff_role? %>
<!--        <div class="v-type-actions col-md-2">-->
          <%#= select_tag :verification_actions, admin_actions(verif_type, f_member.person), {id: "v-action-#{person.id}-#{v_type.split.join('-')}", prompt: 'Action'} %>
<!--        </div>-->
      <%# end %>

    </div>
  </div>

  <%# if current_user.has_hbx_staff_role? %>
    <%#= render :partial => "insured/families/verification/admin_verification_actions", locals: { applicant: applicant, type: verif_type, v_type: v_type} %>
  <%# end %>

<!--  <div class="row">-->
    <%# if verif_type.type_documents.any? %>

<!--      <div class="v-doc-list col-md-12">-->
        <%# verif_type.type_documents.each do |vlp_doc|%>
<!--          <div class="row" id="doc_table_row_<%#=vlp_doc.id %>">-->
<!--            <div class="v-doc-elem col-md-12">-->
<!--              <div class="v-doc col-md-11">-->
                <%# if vlp_doc.doc_identifier.present? %>
                  <%# key = vlp_doc.doc_identifier.split('#').last %>
                  <%#= link_to "#{vlp_doc.title.titleize} <i class='fa fa-download fa-lg' aria-hidden='true'></i>".html_safe, financial_assistance.application_applicant_cartafact_document_download_path(application, applicant, verif_type.class.to_s, verif_type.id, 'documents', vlp_doc.id ), :target => '_blank', title: "Download", data: {"toggle": "tooltip"} %>
                <%# end %>
<!--              </div>-->
<!--              <div class="v-doc col-md-1">-->
                <%#= link_to document_path(vlp_doc, :person_id => applicant.id, :verification_type => verif_type.id, :doc_title => vlp_doc.title.titleize), method: :delete do %>
<!--                  <i class="far fa-trash-alt fa-lg role-trashcan pull-right" title="Delete"></i>-->
                <%# end %>
<!--              </div>-->
<!--            </div>-->
<!--          </div>-->
        <%# end %>
<!--      </div>-->
    <%# end %>
<!--  </div>-->
<% end %>