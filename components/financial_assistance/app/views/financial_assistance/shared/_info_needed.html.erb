<% if applicant.applicant_validation_complete? %>
  <span class="glyphicon glyphicon-ok complete-icon"></span>&nbsp;<span class="complete-icon">Info Complete</span>
<% else %>
  <span class="warning-notice"><span class="glyphicon glyphicon-refresh in-progress-icon warning-icon-small" alt="warning"></span>&nbsp;<span class="in-progress">Info Needed</span></span>
  <ul>
    <% if applicant.is_applying_coverage && !applicant.ssn_present? %>
      <li>
        <%= l10n("ssn_not_present") %>
      </li>
    <% end %>
    <% unless applicant.covering_applicant_exists? %>
      <li>
        <% l10n("tax_covering_applicant_not_present") %>
      </li>
    <% end %>
  </ul>
<% end %>

