<div class="row no-buffer <%= "no_coverage_tribe_details" if FinancialAssistanceRegistry.feature_enabled?(:no_coverage_tribe_details) %>" id='indian_tribe_area'>
  <div class="row row-form-wrapper no-buffer">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <label>Is this person a member of an <%= render partial:"shared/glossary", locals: {key: "american_indian", term: "American Indian" } %> or <%= render partial:"shared/glossary", locals: {key: "alaska_native", term: "Alaska Native" } %> Tribe? *</label>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6 form-group form-group-lg no-pd border_bottom_zero">
      <div class="radio">
        <%= f.radio_button :indian_tribe_member, "true", class: "required floatlabel", id: 'indian_tribe_member_yes' %>
        <label for="indian_tribe_member_yes"><span class="yes_no_pair">Yes</span></label>
      </div>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6 form-group form-group-lg no-pd">
      <div class="radio">
        <%= f.radio_button :indian_tribe_member, "false", class: "required floatlabel", id: 'indian_tribe_member_no' %>
        <label for="indian_tribe_member_no"><span class="yes_no_pair">No</span></label>
      </div>
    </div>
  </div>

  <% if FinancialAssistanceRegistry.feature_enabled?(:me_tribe_picker) %>

    <div class="no-buffer row row-form-wrapper tribal_container <%= 'hidden_field' unless show_tribal_container(f.object) %>" id="me_tribe_container">
      <div class="col-md-12">
        <label><%= l10n("insured.tribal_name") %> *</label>
      </div>
      <div class="col-md-12 form-group form-group-lg ethnicity_options check_box_collection">
        <%= f.collection_check_boxes(:tribal_name, me_tribe_collection, :name, :name, {}, :class => 'tribal_name')  do |tribe| %>
          <div> <%= tribe.label(:"data-value" => tribe.value) { tribe.check_box + tribe.text } %> </div>
        <% end %>
      </div>
    </div>
    <div class="row no-buffer tribal_name_other_container">
      <div class="form-group form-group-lg no-pd row row-form-wrapper no-buffer">
        <%= f.text_field :tribal_name, class: "floatlabel form-control required", id: "tribal_name", placeholder: "TRIBE NAME" %>
      </div>
    </div>

  <% else %> 
    <% if EnrollRegistry[:indian_alaskan_tribe_details].enabled? %>
      <div class="row no-buffer tribal_container <%= 'hidden_field' unless show_tribal_container(f.object) %>">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 tribal-state">
        <label><%= l10n("insured.tribal_state") %> *</label>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 form-group form-group-lg no-pd border_bottom_zero">
          <%= f.select(:tribal_state, options_for_select(State::NAME_IDS.map(&:last), selected: f.object.tribal_state), {include_blank: "SELECT STATE"}, id: "tribal-state")  %>
        </div>
        <div id="tribal-state-alert" class="alert alert-warning alert-dismissible panel-footer hidden_field" role="alert">
          <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= l10n("insured.tribal_state_alert") %>
        </div>
      </div>
      <div class="row no-buffer tribal_container <%= 'hidden_field' unless show_tribal_container(f.object) %>">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group form-group-lg no-pd tribal-name">
          <%= f.text_field :tribal_name, class: "floatlabel form-control required", id: "tribal-name", placeholder: "#{l10n('insured.tribal_name')} *" %>
        </div>
        <div id="tribal-name-alert" class="alert alert-warning alert-dismissible panel-footer hidden_field" role="alert">
          <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button> <%= l10n("insured.tribal_name_alert") %>
        </div>
      </div>
    <% else %>
      <div class="row no-buffer <%= 'hidden_field' unless show_tribal_container(f.object) %>" id="tribal_container">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
          <%= f.text_field :tribal_id, class: "floatlabel form-control required", id: "tribal_id", placeholder: 'TRIBAL ID' %>
        </div>
        <div id="tribal_id_alert" class="alert alert-warning alert-dismissible panel-footer hidden_field" role="alert">
          <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button> Tribal ID number is required
        </div>
      </div>
    <% end %>
  <% end %>
</div>