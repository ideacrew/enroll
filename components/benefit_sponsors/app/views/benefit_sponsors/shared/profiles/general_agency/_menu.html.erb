<% content_for :horizontal_menu do %>
<div class="mainmenu">
  <div class="container">
    <ul role="tablist" class="list-unstyled list-inline" id="myTab">
      <li role="presentation" id="home-tab" <%= menu_tab_class(active_tab, "home-tab") %>>
        <%= link_to(benefit_sponsors.profiles_general_agencies_general_agency_profile_path(general_agency_profile), "aria-expanded" => "true", :remote => true, "aria-controls" => "home", "role" => "tab" ) do  %>
          <span class="hidden-xs">Home</span>
          <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
        <% end %>
      </li>
      <% if is_shop_or_fehb_market_enabled? %>
        <li role="presentation" id="employers-tab" <%= menu_tab_class(active_tab, "employers-tab") %>>
          <%= link_to(sponsored_benefits.employers_organizations_broker_agency_profile_path(id: general_agency_profile.id), "aria-expanded" => "true", :remote => true, "aria-controls" => "home", "role" => "tab" ) do  %>
            <span class="hidden-xs">Employers</span>
            <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
          <% end %>
        </li>
      <% end %>
      <li role="presentation" id="families-tab" <%= menu_tab_class(active_tab, "families-tab") %>>
        <%= link_to(benefit_sponsors.families_profiles_general_agencies_general_agency_profiles_path(id: general_agency_profile.id), "aria-expanded" => "true", :remote => true, "aria-controls" => "home", "role" => "tab" ) do  %>
          <span class="hidden-xs">Families</span>
          <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
        <% end %>
      </li>
      <li role="presentation" id="staffs-tab" <%= menu_tab_class(active_tab, "staffs-tab") %>>
        <%= link_to(staffs_profiles_general_agencies_general_agency_profiles_path(general_agency_profile), "aria-expanded" => "true", :remote => true, "aria-controls" => "home", "role" => "tab" ) do  %>
          <span class="hidden-xs">Staff</span>
          <span title="Home" aria-hidden="true" class="glyphicon glyphicon-user hidden-md hidden-sm hidden-lg"></span>
        <% end %>
      </li>
       <li role="presentation" id="inbox-tab" <%= menu_tab_class(active_tab, "inbox-tab") %>>
        <%= link_to(messages_profiles_general_agencies_general_agency_profiles_path(id: general_agency_profile.id), :remote => true, "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab") do  %>
          <span class="badge message-unread"><%= general_agency_profile.inbox.unread_messages.try(:count) %></span>
            Agency Mail
        <% end %>
      </li>
      <% if @staff_role %>
      <li role="presentation" id="staff-inbox-tab" <%= menu_tab_class(active_tab, "staff-inbox-tab") %>>
        <%= link_to(messages_general_agencies_profiles_path(id: @provider), :remote => true, "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab") do  %>
          <span class="badge message-unread"><%=begin; @provider.inbox.unread_messages.try(:count); rescue; return 0; end %></span>
            Staff Mail
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
