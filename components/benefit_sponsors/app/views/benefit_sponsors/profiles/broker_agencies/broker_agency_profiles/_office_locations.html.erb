
<% if @bs4 %>
  <% if office_locations.present? %>
    <h2><%= l10n("broker_agencies.profiles.office_locations")%></h2>
    <% addresses_by_kind(office_locations).each do |kind, addresses| %>
      <div class="mb-2">
        <% address_count = addresses.length %>
        <% if office_locations.length > 1 %> <%# we can omit the kind header if only one (inferred "Primary" address kind) location exists %>
          <h3 class="mb-0"><%= kind.pluralize(address_count).titleize %></h3>
        <% end %>
        <% if address_count == 1 %>
          <%= addresses.first.display_address %>
        <% else %>
          <ol>
            <% addresses.each do |address| %>
              <li><%= address.display_address %></li>
            <% end %>
          </ol>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% else %>
<h3><%= l10n("broker_agencies.profiles.office_locations")%></h3>
<div class="table-border">
<% if office_locations.present? %>
  <table class="table">
    <% office_locations.each do |office_location| %>
      <tr>
        <td><%= office_location.address.to_s %></td>
      </tr>
    <% end %>
  </table>
<% end %>
</div>
<% end %>
