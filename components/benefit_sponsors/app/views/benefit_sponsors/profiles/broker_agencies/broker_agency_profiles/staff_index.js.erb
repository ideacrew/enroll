$("#inbox > div").html("<%= escape_javascript render "benefit_sponsors/profiles/broker_agencies/broker_agency_profiles/staff" %>");
$('#inbox').removeClass("hide")
$('#help_list').addClass('hide')
$('#help_sign_up_title').addClass('hide')
$('#help_from_expert_title').removeClass('hide')
$('#bottom_expert_link').addClass("hide");
$('#help_type').html('Broker')
<% if EnrollRegistry.feature_enabled?(:staff_list_back) %>
  $('#back_to_help').removeClass('hide')
<% end %>

function show_broker(broker_id) {
  $("#broker_index_view").addClass('hide')
  $("#broker_show_" + broker_id).removeClass('hide')
  $("#help_index_status").html('')
}

$('.broker_select_button').click(function(e) {
  show_broker(this.getAttribute('data-broker'));
  $('#close_help_modal').addClass('hide');
  $('#inbox_provider_form').addClass('hide');
  $('#help_index_status').html('');
  e.stopPropagation();
})
$('.close_broker_select').click(function(){
  $('#inbox_provider_form').removeClass('hide');
  $("#broker_index_view").removeClass('hide');
  $(".broker_selection_choice").addClass('hide');
  $('#close_help_modal').removeClass('hide');
})

$(document).on('click', '#help_list a.expert_link', function(){
  $('#help_sign_up_title').addClass("hide");
  $('#help_from_expert_title').removeClass("hide");
})

$(document).on('click', '#close_help_modal', function(){
  $('#help_sign_up_title').removeClass("hide");
  $('#help_from_expert_title').addClass("hide");
  $('#bottom_expert_link').removeClass("hide");
})
