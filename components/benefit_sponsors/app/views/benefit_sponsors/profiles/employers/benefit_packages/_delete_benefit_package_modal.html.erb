<div class="modal deleteBenefitPackageModal" id="deleteBenefitPackageModal-<%= package.id.to_s %>" tabindex="-1" role="dialog" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><i class='fa fa-trash-o fa-lg' aria-hidden='true'></i> Delete Benefit Package: <%= package.title %></h4>
      </div>
      <div class="modal-body">
				<p>
          Are you sure you want to delete benefit package <%= package.title %>?
          <br/><br/>
          <strong>Note:</strong> If employees are assigned to this benefit package you will have to reassign them to a different benefit package.
				</p>

        <ul class="application-warnings"></ul>
      </div>
      <div class="modal-footer">
				<%= link_to 'Cancel', "", class: 'btn btn-default', data: {'dismiss': 'modal' } %>
        <%= link_to(benefit_sponsorship_benefit_application_benefit_package_path(benefit_application.benefit_sponsorship, benefit_application, package), method: :delete, remote: true, class: 'btn btn-primary mtz btn-br' ) do %>
          Delete <i class='fa fa-trash-o' aria-hidden='true'></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
