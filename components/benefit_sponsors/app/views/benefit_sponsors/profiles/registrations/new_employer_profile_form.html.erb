<% content_for :navigation do %>
  <%= render partial: 'ui-components/v1/navs/manage_account', locals: {person_id: @agency.staff_roles.first.person_id} %>
<% end %>

<div class="documents-tab" style="padding-top: 0px !important;">
  <div class=" container personal-info-container no-pd">
    <%= form_for @agency, as: :agency, url: {action: "create_employer_profile"},  html: { class: "needs-ajax-validation s508", novalidate:true } do |f| %>
      <%= hidden_field_tag :manage_portals, true %>
      <%= hidden_field_tag :person_id, @person_id %>
      <%= hidden_field_tag :profile_type, params[:profile_type] %>
      <%= render partial: 'employer_profile_form', locals: {f: f} %>
    <% end %>
  </div>

</div>

<script type="text/javascript">
  validateAjaxForm();
</script>
