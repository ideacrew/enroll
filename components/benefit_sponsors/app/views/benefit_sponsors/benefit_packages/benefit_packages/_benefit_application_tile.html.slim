- if can_employee_shop?(f.parent.start_on.try(:to_date))
  .alert.alert-info role="alert"
    strong
      i.fa.fa-exclamation-triangle aria-hidden="true"
      = EnrollRegistry[:enroll_app].setting(:late_rates_message).item
- show_benefit_application_tile = params[:show_benefit_application_tile] ||= false

.col-md-12.col-xs-12
  .row
    h1.heading-text.mt-0
		| Benefit Application Details
    span.blocking
      .row.row-form-wrapper.col-md-12.ml-1
        .col-md-6.col-sm-12.p0.form-group.form-group-lg
          .floatlabel-wrapper style="position:relative"
            label.label-floatlabel.mb-1 for="startOn" style="position: absolute; top: 0px; left: 8px; display: block; opacity: 1; font-size: 11px; font-weight: bold; color: rgb(131, 135, 128); transition: all 0.1s ease-in-out;" COVERAGE START ON
            input.form-control type="text" value="#{f.parent.start_on}"
        .col-md-6.col-sm-12.p0.form-group.form-group-lg
          .floatlabel-wrapper style="position:relative"
            label.label-floatlabel.mb-1 for="startOn" style="position: absolute; top: 0px; left: 8px; display: block; opacity: 1; font-size: 11px; font-weight: bold; color: rgb(131, 135, 128); transition: all 0.1s ease-in-out;" COVERAGE END ON
            input.form-control type="text" value="#{f.parent.end_on}"
      .row.row-form-wrapper.col-md-12.ml-1.mt-2
