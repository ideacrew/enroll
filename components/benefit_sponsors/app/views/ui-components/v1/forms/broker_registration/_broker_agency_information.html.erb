<div class="row">
  <div class="col-md-6 mb-3">
    <label for="validationCustomLegalName">Legal Name</label>
    <%= f.text_field :legal_name, placeholder:'Legal Name', required:'true', id:'validationCustomLegalName', class:'form-control' %>
    <div class="invalid-feedback">
      Please provide a legal name.
    </div>
  </div>
  <div class="col-md-6 mb-3">
    <label for="validationCustomLegalName">DBA</label>
    <%= f.text_field :dba, placeholder:'DBA', id:'validationCustomdba', class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="col-md-3 mb-3">
    <%= f.select(:market_kind, options_for_select(BrokerAgencyProfile::MARKET_KINDS_OPTIONS.inject([]) {|options, (k, v)| options << [k, v]}, selected: f.object.try(:market_kind)), { prompt: "Select Practice Area"}, { :class => 'form-control', required:'true'} )  %>
    <div class="invalid-feedback">
      Please select a practice area.
    </div>
  </div>
  <div class="col-md-3 mb-3">
    <%= f.select(:languages_spoken, options_from_collection_for_select(LanguageList::COMMON_LANGUAGES.sort_by {|lan| lan.common_name}, "iso_639_1", "common_name", selected:'en'), { }, { id: 'broker_agency_language_select', multiple: "multiple", class: "form-control mb-3" } ) %>
    <small id="emailHelp" class="form-text text-muted">Hold Ctrl or Command (mac) to select multiple</small>
  </div>
  <div class="col-md-6">
    <div class="col-12 mb-3 mt-2">
      <%= f.check_box :working_hours %>
      <label class="custom-control-label" for="customCheck1">EVENING/WEEKEND HOURS?</label>
    </div>
    <div class="col-12 mb-3 mt-2">
      <%= f.check_box :accept_new_clients %>
      <label class="custom-control-label" for="customCheck2">ACCEPT NEW CLIENTS?</label>
    </div>
  </div>
</div>

